
# API Keys for LLM services
OPENAI_API_KEY=your_openai_api_key_here
# Alternative providers if needed
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, cohere
LLM_MODEL=gpt-3.5-turbo  # Or gpt-4, claude-v1, etc.
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.3

# Extension Settings
EXTENSION_DEBUG=true
EXTENSION_LOG_LEVEL=info  # Options: debug, info, warn, error
API_ENDPOINT=https://api.yourdomain.com/v1
MAX_CACHED_LISTINGS=100

# Test Configuration 
TEST_MODE=true  # Enable test mode for development
MOCK_LLM_RESPONSES=true  # Use mock LLM responses for faster testing
SKIP_BROWSER_LAUNCH=false  # For headless testing
BROWSER_ENV=true  # For tests that need a browser

# Feature Flags
ENABLE_BACKGROUND_PROCESSING=true
ENABLE_MULTI_PLATFORM=true
ENABLE_ANALYTICS=false
ENABLE_EXPORT_FEATURES=true
