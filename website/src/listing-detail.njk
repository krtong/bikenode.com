inlineJS: |
  let currentImageIndex = 0;
  const images = [
    '/assets/images/bikes/trek-fuel-ex-1.jpg',
    '/assets/images/bikes/trek-fuel-ex-2.jpg',
    '/assets/images/bikes/trek-fuel-ex-3.jpg',
    '/assets/images/bikes/trek-fuel-ex-4.jpg',
    '/assets/images/bikes/trek-fuel-ex-5.jpg'
  ];
  
  function showImage(index) {
    currentImageIndex = index;
    document.getElementById('main-image').src = images[index];
    
    document.querySelectorAll('.thumbnail').forEach((thumb, i) => {
      thumb.classList.toggle('active', i === index);
    });
  }
  
  function nextImage() {
    const nextIndex = (currentImageIndex + 1) % images.length;
    showImage(nextIndex);
  }
  
  function prevImage() {
    const prevIndex = (currentImageIndex - 1 + images.length) % images.length;
    showImage(prevIndex);
  }
  
  function openImageModal(index) {
    showImage(index);
    document.getElementById('image-modal').style.display = 'flex';
  }
  
  function closeImageModal() {
    document.getElementById('image-modal').style.display = 'none';
  }
  
  function contactSeller() {
    // Implementation for contacting seller
    document.getElementById('contact-modal').style.display = 'flex';
  }
  
  function closeContactModal() {
    document.getElementById('contact-modal').style.display = 'none';
  }
  
  function makeOffer() {
    document.getElementById('offer-modal').style.display = 'flex';
  }
  
  function closeOfferModal() {
    document.getElementById('offer-modal').style.display = 'none';
  }
  
  function addToWatchlist() {
    const btn = document.getElementById('watchlist-btn');
    const isWatching = btn.classList.contains('watching');
    
    if (isWatching) {
      btn.classList.remove('watching');
      btn.innerHTML = '<i class="icon">‚ô°</i> Add to Watchlist';
    } else {
      btn.classList.add('watching');
      btn.innerHTML = '<i class="icon">‚ô•</i> Watching';
    }
  }
  
  function reportListing() {
    if (confirm('Report this listing for violating community guidelines?')) {
      console.log('Listing reported');
    }
  }
  
  function shareListing() {
    if (navigator.share) {
      navigator.share({
        title: '2023 Trek Fuel EX 8 - Excellent Condition',
        url: window.location.href
      });
    } else {
      navigator.clipboard.writeText(window.location.href);
      alert('Link copied to clipboard!');
    }
  }
