}

.segment-description {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 16px;
}

.segment-metrics {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
}

.segment-metric {
    text-align: center;
    padding: 8px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 6px;
}

.metric-value {
    font-weight: 600;
    color: var(--text-primary);
    font-size: 1.1rem;
}

.metric-label {
    font-size: 0.75rem;
