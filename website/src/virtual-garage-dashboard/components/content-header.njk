<div class="content-header">
    <div>
        <h1>Virtual Garage</h1>
        <p class="content-subtitle">Manage your bikes and maintenance records</p>
    </div>
    <div class="header-actions">
        <a href="/add-bike-v2/" class="btn-primary">
            <span>➕</span>
            Add Bike
        </a>
    </div>
</div>

<div class="garage-tabs">
    <button class="garage-tab active" data-tab="bikes">
        <span class="tab-icon">🏍️</span>
        <span class="tab-label">My Bikes</span>
        <span class="tab-count" id="bikesCount">0</span>
    </button>
    <button class="garage-tab" data-tab="crash-reports">
        <span class="tab-icon">📋</span>
        <span class="tab-label">Crash Reports</span>
        <span class="tab-count" id="crashCount">0</span>
    </button>
    <button class="garage-tab" data-tab="maintenance">
        <span class="tab-icon">🔧</span>
        <span class="tab-label">Maintenance</span>
        <span class="tab-badge">3 due</span>
    </button>
</div>