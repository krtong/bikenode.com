<div class="modal" id="addGearModal">
    <div class="modal-content large">
        <div class="modal-header">
            <h2>Add Gear to Your Vault</h2>
            <button class="modal-close" onclick="app.closeAddGearModal()">√ó</button>
        </div>
        
        <div class="modal-body">
            <form id="addGearForm">
                <div class="form-section">
                    <h3>Gear Type</h3>
                    <div class="gear-type-grid">
                        <label class="gear-type-card">
                            <input type="radio" name="gearType" value="helmet" required>
                            <div class="type-content">
                                <span class="type-icon">ü™ñ</span>
                                <span class="type-label">Helmet</span>
                            </div>
                        </label>
                        <label class="gear-type-card">
                            <input type="radio" name="gearType" value="jacket" required>
                            <div class="type-content">
                                <span class="type-icon">üß•</span>
                                <span class="type-label">Jacket</span>
                            </div>
                        </label>
                        <label class="gear-type-card">
                            <input type="radio" name="gearType" value="gloves" required>
                            <div class="type-content">
                                <span class="type-icon">üß§</span>
                                <span class="type-label">Gloves</span>
                            </div>
                        </label>
                        <label class="gear-type-card">
                            <input type="radio" name="gearType" value="pants" required>
                            <div class="type-content">
                                <span class="type-icon">üëñ</span>
                                <span class="type-label">Pants</span>
                            </div>
                        </label>
                        <label class="gear-type-card">
                            <input type="radio" name="gearType" value="boots" required>
                            <div class="type-content">
                                <span class="type-icon">ü•æ</span>
                                <span class="type-label">Boots</span>
                            </div>
                        </label>
                        <label class="gear-type-card">
                            <input type="radio" name="gearType" value="other" required>
                            <div class="type-content">
                                <span class="type-icon">üõ°Ô∏è</span>
                                <span class="type-label">Other</span>
                            </div>
                        </label>
                    </div>
                </div>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label for="gearBrand">Brand*</label>
                        <input type="text" id="gearBrand" name="brand" required 
                               placeholder="e.g., Alpinestars, Shoei, Dainese">
                    </div>
                    
                    <div class="form-group">
                        <label for="gearModel">Model*</label>
                        <input type="text" id="gearModel" name="model" required 
                               placeholder="e.g., RF-1400, GP Plus R">
                    </div>
                    
                    <div class="form-group">
                        <label for="gearSize">Size</label>
                        <input type="text" id="gearSize" name="size" 
                               placeholder="e.g., Large, 56cm, XL">
                    </div>
                    
                    <div class="form-group">
                        <label for="gearColor">Color/Style</label>
                        <input type="text" id="gearColor" name="color" 
                               placeholder="e.g., Black/Red, Hi-Viz">
                    </div>
                    
                    <div class="form-group">
                        <label for="purchaseDate">Purchase Date</label>
                        <input type="date" id="purchaseDate" name="purchaseDate">
                    </div>
                    
                    <div class="form-group">
                        <label for="purchasePrice">Purchase Price</label>
                        <input type="number" id="purchasePrice" name="purchasePrice" 
                               placeholder="0.00" step="0.01">
                    </div>
                </div>
                
                <div class="form-section">
                    <h3>Protection & Certifications</h3>
                    <div class="protection-grid">
                        <label class="checkbox-label">
                            <input type="checkbox" name="certifications" value="ce1">
                            CE Level 1
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="certifications" value="ce2">
                            CE Level 2
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="certifications" value="dot">
                            DOT Approved
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="certifications" value="ece">
                            ECE Certified
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="certifications" value="snell">
                            Snell Certified
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="certifications" value="fim">
                            FIM Homologated
                        </label>
                    </div>
                </div>
                
                <div class="form-group full-width">
                    <label for="gearNotes">Notes</label>
                    <textarea id="gearNotes" name="notes" rows="3" 
                              placeholder="Any additional notes about this gear..."></textarea>
                </div>
                
                <div class="form-section">
                    <h3>Photos</h3>
                    <div class="photo-upload-area" id="gearPhotoUpload">
                        <div class="upload-prompt">
                            <span class="upload-icon">üì∏</span>
                            <p>Click or drag photos here</p>
                            <p class="upload-hint">Max 4 photos, 10MB each</p>
                        </div>
                        <input type="file" id="gearPhotoInput" accept="image/*" multiple hidden>
                    </div>
                    <div class="photo-preview-grid" id="gearPhotoPreview"></div>
                </div>
            </form>
        </div>
        
        <div class="modal-footer">
            <button class="btn-secondary" onclick="app.closeAddGearModal()">Cancel</button>
            <button class="btn-primary" onclick="app.saveGear()">
                <span>üíæ</span> Save to Gear Vault
            </button>
        </div>
    </div>
</div>