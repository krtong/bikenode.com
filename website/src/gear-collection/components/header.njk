<div class="gear-collection-header">
    <div class="header-content">
        <h1>Gear Collection</h1>
        <p>Track and organize all your cycling and motorcycling gear in one place</p>
    </div>
    <div class="header-actions">
        <button class="btn-secondary" onclick="gearApp.showWishlist()">
            <span>⭐</span> Wishlist
        </button>
        <button class="btn-primary" onclick="gearApp.showAddGearModal()">
            <span>➕</span> Add Gear
        </button>
    </div>
</div>

<div class="collection-stats">
    <div class="stat-card">
        <div class="stat-value" id="totalGearCount">0</div>
        <div class="stat-label">Total Items</div>
    </div>
    <div class="stat-card">
        <div class="stat-value" id="totalBrands">0</div>
        <div class="stat-label">Brands</div>
    </div>
    <div class="stat-card">
        <div class="stat-value">$<span id="totalValue">0</span></div>
        <div class="stat-label">Total Value</div>
    </div>
    <div class="stat-card">
        <div class="stat-value" id="favoriteBrand">-</div>
        <div class="stat-label">Favorite Brand</div>
    </div>
</div>