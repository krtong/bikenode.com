    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll('.preview-button');
    const content = document.getElementById('preview-content');
    
    // Force specific variant for preview
    function setPreviewVariant(variant) {
        localStorage.setItem('ab_test_group_preview', variant);
        
        if (variant === 'compare') {
            showComparison();
        } else {
            showSingleView(variant);
        }
    }
    
    function showSingleView(variant) {
        content.innerHTML = `
            <div class="preview-frame">
                <iframe src="/dashboard/?preview=${variant}" width="100%" height="100%" frameborder="0"></iframe>
            </div>
        `;
    }
    
    function showComparison() {
        content.innerHTML = `
            <div class="comparison-grid">
                <div class="comparison-item">
                    <h3>Control (Current)</h3>
                    <div class="preview-frame">
                        <iframe src="/dashboard/?preview=control" width="100%" height="100%" frameborder="0"></iframe>
                    </div>
                </div>
                <div class="comparison-item">
                    <h3>Variant (New)</h3>
                    <div class="preview-frame">
                        <iframe src="/dashboard/?preview=variant" width="100%" height="100%" frameborder="0"></iframe>
                    </div>
                </div>
            </div>
        `;
    }
    
    // Button click handlers
    buttons.forEach(button => {
        button.addEventListener('click', function() {
            buttons.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            setPreviewVariant(this.dataset.variant);
        });
    });
    
    // Show control by default
    setPreviewVariant('control');
});
</script>