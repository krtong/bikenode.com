<!-- Segments Filters -->
<div class="segments-filters">
    <div class="search-bar">
        <div class="search-input-wrapper">
            <span class="search-icon">🔍</span>
            <input type="text" class="search-input" placeholder="Search segments by name or location..." id="segmentSearchInput">
        </div>
    </div>
    
    <div class="filter-controls">
        <div class="filter-dropdown">
            <button class="filter-btn" id="distanceFilterBtn">
                <span class="icon">📍</span>
                <span class="filter-label">Within 25 miles</span>
                <span class="dropdown-arrow">▼</span>
            </button>
            <div class="dropdown-menu" id="distanceDropdown">
                <a href="#" class="dropdown-item" data-value="5">Within 5 miles</a>
                <a href="#" class="dropdown-item" data-value="10">Within 10 miles</a>
                <a href="#" class="dropdown-item active" data-value="25">Within 25 miles</a>
                <a href="#" class="dropdown-item" data-value="50">Within 50 miles</a>
                <a href="#" class="dropdown-item" data-value="100">Within 100 miles</a>
            </div>
        </div>
        
        <div class="filter-dropdown">
            <button class="filter-btn" id="typeFilterBtn">
                <span class="icon">🏔️</span>
                <span class="filter-label">All Types</span>
                <span class="dropdown-arrow">▼</span>
            </button>
            <div class="dropdown-menu" id="typeDropdown">
                <a href="#" class="dropdown-item active" data-value="all">All Types</a>
                <a href="#" class="dropdown-item" data-value="climb">Climbs Only</a>
                <a href="#" class="dropdown-item" data-value="sprint">Sprints Only</a>
                <a href="#" class="dropdown-item" data-value="descent">Descents Only</a>
                <a href="#" class="dropdown-item" data-value="mixed">Mixed Terrain</a>
            </div>
        </div>
        
        <div class="filter-dropdown">
            <button class="filter-btn" id="surfaceFilterBtn">
                <span class="icon">🛣️</span>
                <span class="filter-label">All Surfaces</span>
                <span class="dropdown-arrow">▼</span>
            </button>
            <div class="dropdown-menu" id="surfaceDropdown">
                <a href="#" class="dropdown-item active" data-value="all">All Surfaces</a>
                <a href="#" class="dropdown-item" data-value="paved">Paved Only</a>
                <a href="#" class="dropdown-item" data-value="gravel">Gravel</a>
                <a href="#" class="dropdown-item" data-value="dirt">Dirt/Trail</a>
            </div>
        </div>
    </div>
    
    <div class="filter-pills">
        <button class="filter-pill active" data-filter="all">
            <span class="pill-icon">🏁</span>
            All Segments
        </button>
        <button class="filter-pill" data-filter="starred">
            <span class="pill-icon">⭐</span>
            Starred
        </button>
        <button class="filter-pill" data-filter="created">
            <span class="pill-icon">👤</span>
            Created by Me
        </button>
        <button class="filter-pill" data-filter="kom">
            <span class="pill-icon">👑</span>
            Your KOMs/QOMs
        </button>
        <button class="filter-pill" data-filter="pr">
            <span class="pill-icon">🏆</span>
            Recent PRs
        </button>
        <button class="filter-pill" data-filter="trending">
            <span class="pill-icon">🔥</span>
            Trending
        </button>
        <button class="filter-pill" data-filter="new">
            <span class="pill-icon">✨</span>
            New This Week
        </button>
    </div>
    
    <div class="sort-controls">
        <span class="sort-label">Sort by:</span>
        <select class="sort-select" id="segmentSortSelect">
            <option value="popularity">Most Popular</option>
            <option value="distance">Distance from Me</option>
            <option value="recent">Recently Active</option>
            <option value="elevation">Elevation Gain</option>
            <option value="length">Segment Length</option>
            <option value="attempts">Total Attempts</option>
        </select>
    </div>
</div>