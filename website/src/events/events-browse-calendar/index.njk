---
layout: bikenode-main-layout-01
title: Events Calendar - BikeNode
permalink: /events/
customCSS:
  - ./styles/events-browse-calendar.css
customJS:
  - ./js/events-browse-calendar.js
---

<section class="events-browse-calendar-page">
    <div class="container">
        <!-- Events Header -->
        <div class="events-browse-calendar-header">
            <div class="events-browse-calendar-header-content">
                <h1>Rides & Events</h1>
                <p>Connect with fellow riders at local meetups, group rides, and events</p>
                <a href="/events/events-create-form/" class="events-browse-calendar-btn-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 5v14"></path>
                        <path d="M5 12h14"></path>
                    </svg>
                    Create Event
                </a>
            </div>
        </div>
        
        <!-- Event Filters -->
        <div class="events-browse-calendar-filters">
            <div class="events-browse-calendar-filter-tabs">
                <button class="events-browse-calendar-filter-tab active" data-filter="all">All Events</button>
                <button class="events-browse-calendar-filter-tab" data-filter="rides">Group Rides</button>
                <button class="events-browse-calendar-filter-tab" data-filter="meetups">Meetups</button>
                <button class="events-browse-calendar-filter-tab" data-filter="shows">Shows & Expos</button>
                <button class="events-browse-calendar-filter-tab" data-filter="races">Races & Competitions</button>
                <button class="events-browse-calendar-filter-tab" data-filter="workshops">Workshops</button>
            </div>
            
            <div class="events-browse-calendar-filter-controls">
                <div class="events-browse-calendar-location-filter">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <input type="text" placeholder="Enter location..." value="San Francisco, CA" class="events-browse-calendar-location-input">
                    <select class="events-browse-calendar-distance-select">
                        <option value="25">25 miles</option>
                        <option value="50" selected>50 miles</option>
                        <option value="100">100 miles</option>
                        <option value="250">250 miles</option>
                    </select>
                </div>
                
                <div class="events-browse-calendar-date-filter">
                    <button class="events-browse-calendar-date-option active">This Week</button>
                    <button class="events-browse-calendar-date-option">This Month</button>
                    <button class="events-browse-calendar-date-option">Next Month</button>
                    <input type="date" class="events-browse-calendar-date-picker events-browse-calendar-date-picker-hidden">
                </div>
            </div>
        </div>
        
        <!-- Map/List Toggle -->
        <div class="events-browse-calendar-view-toggle-container">
            <div class="events-browse-calendar-view-toggle-group">
                <button class="events-browse-calendar-view-mode active" data-view="list">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <rect x="3" y="4" width="18" height="2"></rect>
                        <rect x="3" y="11" width="18" height="2"></rect>
                        <rect x="3" y="18" width="18" height="2"></rect>
                    </svg>
                    List
                </button>
                <button class="events-browse-calendar-view-mode" data-view="map">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon>
                        <line x1="8" y1="2" x2="8" y2="18"></line>
                        <line x1="16" y1="6" x2="16" y2="22"></line>
                    </svg>
                    Map
                </button>
            </div>
            <span class="events-browse-calendar-event-count">24 events found</span>
        </div>
        
        <!-- Events Content -->
        <div class="events-browse-calendar-content">
            <!-- List View -->
            <div class="events-browse-calendar-list" id="listView">
                <!-- Featured Event -->
                <div class="events-browse-calendar-card featured">
                    <div class="events-browse-calendar-badge">Featured</div>
                    <div class="events-browse-calendar-date">
                        <span class="month">JUN</span>
                        <span class="day">15</span>
                    </div>
                    <div class="events-browse-calendar-image">
                        <img src="/assets/images/placeholder-event.jpg" alt="Annual Bike Show">
                    </div>
                    <div class="events-browse-calendar-details">
                        <div class="events-browse-calendar-category">Show & Expo</div>
                        <h3>Bay Area Motorcycle Show 2025</h3>
                        <div class="events-browse-calendar-info">
                            <div class="events-browse-calendar-info-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                <span>10:00 AM - 6:00 PM</span>
                            </div>
                            <div class="events-browse-calendar-info-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                <span>Moscone Center, San Francisco</span>
                            </div>
                            <div class="events-browse-calendar-info-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                <span>245 attending</span>
                            </div>
                        </div>
                        <p class="events-browse-calendar-description">
                            The largest motorcycle show in Northern California featuring the latest bikes, gear, and accessories from top manufacturers.
                        </p>
                        <div class="events-browse-calendar-event-actions">
                            <button class="events-browse-calendar-btn-primary">Register</button>
                            <button class="events-browse-calendar-btn-secondary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="18" cy="5" r="3"></circle>
                                    <circle cx="6" cy="12" r="3"></circle>
                                    <circle cx="18" cy="19" r="3"></circle>
                                    <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
                                    <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
                                </svg>
                                Share
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Regular Events -->
                <div class="events-browse-calendar-grid">
                    <div class="events-browse-calendar-card">
                        <div class="events-browse-calendar-date">
                            <span class="month">JUN</span>
                            <span class="day">12</span>
                        </div>
                        <div class="events-browse-calendar-details">
                            <div class="events-browse-calendar-category">Group Ride</div>
                            <h3>Weekend Canyon Cruise</h3>
                            <div class="events-browse-calendar-info">
                                <div class="events-browse-calendar-info-item">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <polyline points="12 6 12 12 16 14"></polyline>
                                    </svg>
                                    <span>8:00 AM</span>
                                </div>
                                <div class="events-browse-calendar-info-item">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                    <span>Alice's Restaurant, Woodside</span>
                                </div>
                            </div>
                            <p class="events-browse-calendar-description">
                                Join us for a scenic ride through the Santa Cruz mountains. All skill levels welcome!
                            </p>
                            <div class="events-browse-calendar-footer">
                                <div class="events-browse-calendar-attendees">
                                    <div class="events-browse-calendar-attendee-avatars">
                                        <span class="events-browse-calendar-avatar">JD</span>
                                        <span class="events-browse-calendar-avatar">MK</span>
                                        <span class="events-browse-calendar-avatar">+18</span>
                                    </div>
                                    <span class="events-browse-calendar-attendee-count">20 riders</span>
                                </div>
                                <button class="events-browse-calendar-join-btn">Join</button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="events-browse-calendar-card">
                        <div class="events-browse-calendar-date">
                            <span class="month">JUN</span>
                            <span class="day">14</span>
                        </div>
                        <div class="events-browse-calendar-details">
                            <div class="events-browse-calendar-category">Workshop</div>
                            <h3>Basic Motorcycle Maintenance</h3>
                            <div class="events-browse-calendar-info">
                                <div class="events-browse-calendar-info-item">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <polyline points="12 6 12 12 16 14"></polyline>
                                    </svg>
                                    <span>2:00 PM - 5:00 PM</span>
                                </div>
                                <div class="events-browse-calendar-info-item">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                    <span>BikeNode Garage, Oakland</span>
                                </div>
                            </div>
                            <p class="events-browse-calendar-description">
                                Learn essential maintenance skills including oil changes, chain maintenance, and basic troubleshooting.
                            </p>
                            <div class="events-browse-calendar-footer">
                                <div class="events-browse-calendar-price">$45</div>
                                <button class="events-browse-calendar-join-btn">Register</button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="events-browse-calendar-card">
                        <div class="events-browse-calendar-date">
                            <span class="month">JUN</span>
                            <span class="day">18</span>
                        </div>
                        <div class="events-browse-calendar-details">
                            <div class="events-browse-calendar-category">Meetup</div>
                            <h3>Electric Bike Enthusiasts Meetup</h3>
                            <div class="events-browse-calendar-info">
                                <div class="events-browse-calendar-info-item">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <polyline points="12 6 12 12 16 14"></polyline>
                                    </svg>
                                    <span>6:00 PM</span>
                                </div>
                                <div class="events-browse-calendar-info-item">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                    <span>Golden Gate Park</span>
                                </div>
                            </div>
                            <p class="events-browse-calendar-description">
                                Monthly gathering for e-bike enthusiasts. Test rides, tech talks, and networking.
                            </p>
                            <div class="events-browse-calendar-footer">
                                <div class="events-browse-calendar-attendees">
                                    <span class="events-browse-calendar-attendee-count">32 attending</span>
                                </div>
                                <button class="events-browse-calendar-join-btn">RSVP</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Map View (hidden by default) -->
            <div class="events-browse-calendar-map events-browse-calendar-map-hidden" id="mapView">
                <div class="events-browse-calendar-map-container">
                    <div class="events-browse-calendar-map-placeholder">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon>
                            <line x1="8" y1="2" x2="8" y2="18"></line>
                            <line x1="16" y1="6" x2="16" y2="22"></line>
                        </svg>
                        <p>Interactive map would be displayed here</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Load More -->
        <div class="events-browse-calendar-load-more-container">
            <button class="events-browse-calendar-btn-secondary events-browse-calendar-load-more">Load More Events</button>
        </div>
    </div>
</section>
