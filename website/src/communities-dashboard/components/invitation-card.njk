<div class="invitation-card">
    <div class="invitation-header">
        <div class="community-avatar">{{ invitation.avatar }}</div>
        <div class="invitation-info">
            <h3>{{ invitation.communityName }}</h3>
            <p>Invited by <strong>{{ invitation.invitedBy }}</strong></p>
            <span class="invitation-time">{{ invitation.timeAgo }}</span>
        </div>
    </div>
    <div class="invitation-message">
        <p>"{{ invitation.message }}"</p>
    </div>
    <div class="community-preview-info">
        <span>{{ invitation.memberCount }} members â€¢ {{ invitation.visibility }} community</span>
        <div class="preview-tags">
            {% for tag in invitation.tags %}
            <span class="tag">{{ tag }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="invitation-actions">
        <button class="btn-primary" onclick="acceptInvitation('{{ invitation.slug }}')">Accept</button>
        <button class="btn-outline" onclick="declineInvitation('{{ invitation.slug }}')">Decline</button>
    </div>
</div>