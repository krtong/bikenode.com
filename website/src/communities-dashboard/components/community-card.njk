<div class="community-card">
    <div class="community-header">
        <div class="community-avatar">{{ community.avatar }}</div>
        <div class="community-info">
            <h3>{{ community.name }}</h3>
            <p>{{ community.memberCount }} members â€¢ {{ community.visibility }}</p>
        </div>
        <span class="role-badge {{ community.roleClass }}">{{ community.role }}</span>
    </div>
    <div class="community-description">
        <p>{{ community.description }}</p>
    </div>
    <div class="community-tags">
        {% for tag in community.tags %}
        <span class="tag">{{ tag }}</span>
        {% endfor %}
    </div>
    <div class="community-activity">
        <span class="activity-indicator {{ community.activityLevel }}">{{ community.activityIcon }} {{ community.activityText }}</span>
        <span class="last-post">{{ community.lastPost }}</span>
    </div>
    <div class="community-actions">
        <a href="/community/{{ community.slug }}/" class="btn-secondary small">View</a>
        {% if community.canManage %}
        <a href="/community/{{ community.slug }}/manage/" class="btn-secondary small">Manage</a>
        {% endif %}
        <button class="btn-outline small" onclick="leaveCommunity('{{ community.slug }}')">Leave</button>
    </div>
</div>