---
layout: dashboard.njk
title: My Listings
subtitle: Manage your marketplace listings
customCSS:
  - /marketplace/my-listings/styles/my-listings.css
---

<section class="my-listings-page">
    <div class="my-listings-container">
        <header class="listings-header">
            <div class="header-content">
                <h1 class="page-title">My Listings</h1>
                <p class="page-subtitle">Manage and track your marketplace items</p>
            </div>
            
            <div class="header-actions">
                <a href="/sell-item/" class="btn-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v20M2 12h20"/>
                    </svg>
                    Create New Listing
                </a>
            </div>
        </header>
        
        <div class="listings-stats">
            <div class="stat-card">
                <div class="stat-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 7h-9a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2Z"/>
                        <path d="M5 12H2a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h3"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-value">12</span>
                    <span class="stat-label">Active Listings</span>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                        <circle cx="12" cy="12" r="3"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-value">1,234</span>
                    <span class="stat-label">Total Views</span>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-value">23</span>
                    <span class="stat-label">Messages</span>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="m16 12-4-4-4 4"/>
                        <path d="M12 16V8"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-value">$12,450</span>
                    <span class="stat-label">Total Sales</span>
                </div>
            </div>
        </div>
        
        <div class="listings-filters">
            <div class="filter-tabs">
                <button class="filter-tab active" data-status="all">
                    All Listings <span class="count">15</span>
                </button>
                <button class="filter-tab" data-status="active">
                    Active <span class="count">12</span>
                </button>
                <button class="filter-tab" data-status="sold">
                    Sold <span class="count">3</span>
                </button>
                <button class="filter-tab" data-status="draft">
                    Drafts <span class="count">0</span>
                </button>
            </div>
            
            <div class="filter-actions">
                <input type="text" class="search-input" placeholder="Search listings...">
                <select class="sort-select">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="views">Most Views</option>
                </select>
            </div>
        </div>
        
        <div class="listings-table">
            <table>
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Views</th>
                        <th>Listed</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="item-cell">
                            <div class="item-info">
                                <img src="/assets/images/bike-thumb-1.jpg" alt="Specialized Tarmac" class="item-thumb">
                                <div class="item-details">
                                    <h4>2023 Specialized Tarmac SL7 Expert</h4>
                                    <span class="item-category">Road Bikes</span>
                                </div>
                            </div>
                        </td>
                        <td class="price-cell">$4,500</td>
                        <td class="status-cell">
                            <span class="status-badge active">Active</span>
                        </td>
                        <td class="views-cell">234</td>
                        <td class="date-cell">2 days ago</td>
                        <td class="actions-cell">
                            <div class="action-buttons">
                                <button class="action-btn" title="View">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                                <button class="action-btn" title="Edit">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                    </svg>
                                </button>
                                <button class="action-btn mark-sold" title="Mark as Sold">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"/>
                                    </svg>
                                </button>
                                <button class="action-btn delete" title="Delete">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"/>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                    </svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                    
                    <tr>
                        <td class="item-cell">
                            <div class="item-info">
                                <img src="/assets/images/bike-thumb-2.jpg" alt="Canyon Grail" class="item-thumb">
                                <div class="item-details">
                                    <h4>Canyon Grail CF SL 8</h4>
                                    <span class="item-category">Gravel Bikes</span>
                                </div>
                            </div>
                        </td>
                        <td class="price-cell">$2,800</td>
                        <td class="status-cell">
                            <span class="status-badge active">Active</span>
                        </td>
                        <td class="views-cell">156</td>
                        <td class="date-cell">1 week ago</td>
                        <td class="actions-cell">
                            <div class="action-buttons">
                                <button class="action-btn" title="View">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                                <button class="action-btn" title="Edit">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                    </svg>
                                </button>
                                <button class="action-btn mark-sold" title="Mark as Sold">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"/>
                                    </svg>
                                </button>
                                <button class="action-btn delete" title="Delete">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"/>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                    </svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                    
                    <tr>
                        <td class="item-cell">
                            <div class="item-info">
                                <img src="/assets/images/wheels-thumb.jpg" alt="Roval Wheels" class="item-thumb">
                                <div class="item-details">
                                    <h4>Roval CLX 50 Wheelset</h4>
                                    <span class="item-category">Wheels</span>
                                </div>
                            </div>
                        </td>
                        <td class="price-cell">$1,200</td>
                        <td class="status-cell">
                            <span class="status-badge sold">Sold</span>
                        </td>
                        <td class="views-cell">342</td>
                        <td class="date-cell">2 weeks ago</td>
                        <td class="actions-cell">
                            <div class="action-buttons">
                                <button class="action-btn" title="View">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                                <button class="action-btn relist" title="Relist">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="23 4 23 10 17 10"/>
