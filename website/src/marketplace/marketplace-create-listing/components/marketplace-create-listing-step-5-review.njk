<div class="marketplace-create-listing-step" id="marketplace-create-listing-step-5" style="display: none;">
    <h2 class="marketplace-create-listing-step-title">Review Your Listing</h2>
    
    <div class="marketplace-create-listing-review-section">
        <div class="marketplace-create-listing-review-photos">
            <h3>Photos</h3>
            <div class="marketplace-create-listing-review-photo-grid" id="marketplace-create-listing-review-photos">
                <!-- Photos will be populated by JavaScript -->
            </div>
        </div>
        
        <div class="marketplace-create-listing-review-details">
            <h3>Listing Details</h3>
            <dl class="marketplace-create-listing-review-list">
                <dt>Title:</dt>
                <dd id="marketplace-create-listing-review-title">-</dd>
                
                <dt>Category:</dt>
                <dd id="marketplace-create-listing-review-category">-</dd>
                
                <dt>Brand:</dt>
                <dd id="marketplace-create-listing-review-brand">-</dd>
                
                <dt>Model:</dt>
                <dd id="marketplace-create-listing-review-model">-</dd>
                
                <dt>Year:</dt>
                <dd id="marketplace-create-listing-review-year">-</dd>
                
                <dt>Size:</dt>
                <dd id="marketplace-create-listing-review-size">-</dd>
                
                <dt>Condition:</dt>
                <dd id="marketplace-create-listing-review-condition">-</dd>
                
                <dt>Price:</dt>
                <dd id="marketplace-create-listing-review-price" class="marketplace-create-listing-review-price">-</dd>
                
                <dt>Shipping:</dt>
                <dd id="marketplace-create-listing-review-shipping">-</dd>
                
                <dt>Location:</dt>
                <dd id="marketplace-create-listing-review-location">-</dd>
            </dl>
        </div>
        
        <div class="marketplace-create-listing-review-description">
            <h3>Description</h3>
            <p id="marketplace-create-listing-review-description-text">-</p>
        </div>
    </div>
    
    <div class="marketplace-create-listing-terms">
        <label class="marketplace-create-listing-checkbox-label">
            <input type="checkbox" 
                   id="marketplace-create-listing-terms" 
                   name="agreeToTerms"
                   class="marketplace-create-listing-checkbox"
                   required>
            <span>I agree to the <a href="/docs-terms-service/" target="_blank">Terms of Service</a> and understand that BikeNode is not responsible for transactions between users.</span>
        </label>
    </div>
</div>