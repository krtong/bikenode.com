<!-- User Profile Modal -->
<div class="modal user-modal" id="userModal" style="display: none;">
    <div class="modal-content modal-large">
        <button type="button" class="modal-close" data-close-modal>&times;</button>
        
        <div class="user-profile-detail">
            <div class="profile-header">
                <div class="profile-cover">
                    <img src="/assets/images/bikenode_logo.png" alt="Cover" class="cover-image">
                </div>
                
                <div class="profile-main">
                    <img src="/assets/images/bikenode_logo.png" alt="User" class="profile-avatar">
                    <div class="profile-info">
                        <h2 class="profile-name">Sarah Chen</h2>
                        <p class="profile-username">@sarahrides</p>
                        <p class="profile-bio">Century rider and coffee enthusiast ☕ Always chasing sunrise rides in the Bay Area. Member of Team Sunrise Cyclists.</p>
                        
                        <div class="profile-location">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            San Francisco, CA
                        </div>
                    </div>
                    
                    <div class="profile-actions">
                        <button class="btn-primary following">Following</button>
                        <button class="btn-secondary">Message</button>
                        <button class="btn-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="5" r="1"></circle>
                                <circle cx="12" cy="12" r="1"></circle>
                                <circle cx="12" cy="19" r="1"></circle>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="profile-stats-bar">
                <div class="stat-block">
                    <div class="stat-value">2,456</div>
                    <div class="stat-label">Miles This Year</div>
                </div>
                <div class="stat-block">
                    <div class="stat-value">142</div>
                    <div class="stat-label">Total Rides</div>
                </div>
                <div class="stat-block">
                    <div class="stat-value">47</div>
                    <div class="stat-label">Achievements</div>
                </div>
                <div class="stat-block">
                    <div class="stat-value">1.2k</div>
                    <div class="stat-label">Followers</div>
                </div>
                <div class="stat-block">
                    <div class="stat-value">248</div>
                    <div class="stat-label">Following</div>
                </div>
            </div>
            
            <div class="profile-tabs">
                <button class="profile-tab active">Recent Rides</button>
                <button class="profile-tab">Bikes</button>
                <button class="profile-tab">Achievements</button>
                <button class="profile-tab">Photos</button>
            </div>
            
            <div class="profile-content">
                <!-- Recent Rides -->
                <div class="recent-rides">
                    <div class="ride-item">
                        <div class="ride-date">Today</div>
                        <div class="ride-details">
                            <h4>Morning Century</h4>
                            <div class="ride-stats">
                                <span>102.3 mi</span>
                                <span>•</span>
                                <span>5h 12m</span>
                                <span>•</span>
                                <span>3,456 ft</span>
                            </div>
                        </div>
                        <div class="ride-map">
                            <img src="/assets/images/bikenode_logo.png" alt="Route map">
                        </div>
                    </div>
                    
                    <div class="ride-item">
                        <div class="ride-date">Yesterday</div>
                        <div class="ride-details">
                            <h4>Coastal Loop</h4>
                            <div class="ride-stats">
                                <span>45.6 mi</span>
                                <span>•</span>
                                <span>2h 34m</span>
                                <span>•</span>
                                <span>1,234 ft</span>
                            </div>
                        </div>
                        <div class="ride-map">
                            <img src="/assets/images/bikenode_logo.png" alt="Route map">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>