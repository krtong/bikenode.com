<!-- Suggested Users -->
<div class="suggested-section">
    <div class="discovery-banner">
        <div class="banner-content">
            <h2>Discover New Riders</h2>
            <p>Find riders who share your interests and riding style</p>
        </div>
        <div class="banner-illustration">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
        </div>
    </div>
    
    <div class="suggestion-filters">
        <button class="suggestion-chip active">Based on Your Rides</button>
        <button class="suggestion-chip">Near You</button>
        <button class="suggestion-chip">Similar Pace</button>
        <button class="suggestion-chip">Mutual Friends</button>
        <button class="suggestion-chip">New to BikeNode</button>
    </div>
    
    <div class="users-grid suggested-grid">
        <div class="user-card suggested" data-user-id="20">
            <div class="card-header">
                <div class="suggestion-reason">12 mutual friends</div>
                <button class="card-menu-btn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="5" r="1"></circle>
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="12" cy="19" r="1"></circle>
                    </svg>
                </button>
            </div>
            
            <div class="user-avatar-wrapper">
                <img src="/assets/images/bikenode_logo.png" alt="Lisa Park" class="user-avatar">
                <div class="activity-indicator active"></div>
            </div>
            
            <h3 class="user-name">Lisa Park</h3>
            <p class="user-username">@lisaonbikes</p>
            
            <p class="user-bio">Weekend warrior and group ride organizer. Join our Sunday rides! ðŸŒ„</p>
            
            <div class="user-stats">
                <div class="user-stat">
                    <span class="stat-value">1.2k</span>
                    <span class="stat-label">miles/year</span>
                </div>
                <div class="user-stat">
                    <span class="stat-value">67</span>
                    <span class="stat-label">rides</span>
                </div>
                <div class="user-stat">
                    <span class="stat-value">15</span>
                    <span class="stat-label">badges</span>
                </div>
            </div>
            
            <div class="user-tags">
                <span class="tag">Group Rides</span>
                <span class="tag">Weekend Warrior</span>
            </div>
            
            <div class="mutual-friends">
                <div class="mutual-avatars">
                    <img src="/assets/images/bikenode_logo.png" alt="Friend 1" class="mutual-avatar">
                    <img src="/assets/images/bikenode_logo.png" alt="Friend 2" class="mutual-avatar">
                    <img src="/assets/images/bikenode_logo.png" alt="Friend 3" class="mutual-avatar">
                    <span class="mutual-count">+9</span>
                </div>
                <span class="mutual-text">mutual friends</span>
            </div>
            
            <div class="user-actions">
                <button class="btn-primary follow-btn" data-following="false">
                    Follow
                </button>
                <button class="btn-icon dismiss-btn" title="Not interested">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
        </div>
        
        <div class="user-card suggested" data-user-id="21">
            <div class="card-header">
                <div class="suggestion-reason">5 miles away</div>
                <button class="card-menu-btn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="5" r="1"></circle>
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="12" cy="19" r="1"></circle>
                    </svg>
                </button>
            </div>
            
            <div class="user-avatar-wrapper">
                <img src="/assets/images/bikenode_logo.png" alt="Tom Davies" class="user-avatar">
                <div class="activity-indicator"></div>
            </div>
            
            <h3 class="user-name">Tom Davies</h3>
            <p class="user-username">@tomdavies</p>
            
            <p class="user-bio">Commuter cyclist turned endurance rider. Training for my first double century ðŸ’ª</p>
            
            <div class="user-stats">
                <div class="user-stat">
                    <span class="stat-value">2.8k</span>
                    <span class="stat-label">miles/year</span>
                </div>
                <div class="user-stat">
                    <span class="stat-value">156</span>
                    <span class="stat-label">rides</span>
                </div>
                <div class="user-stat">
                    <span class="stat-value">32</span>
                    <span class="stat-label">badges</span>
                </div>
            </div>
            
            <div class="user-tags">
                <span class="tag">Endurance</span>
                <span class="tag">Training</span>
            </div>
            
            <div class="user-actions">
                <button class="btn-primary follow-btn" data-following="false">
                    Follow
                </button>
                <button class="btn-icon dismiss-btn" title="Not interested">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    
    <div class="load-more-section">
        <button class="btn-secondary" id="loadMoreSuggestions">
            Show More Suggestions
        </button>
    </div>
</div>