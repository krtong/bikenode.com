<!-- Filter Tabs -->
<div class="filter-section">
    <div class="filter-tabs">
        <button class="filter-tab active" data-tab="followers">
            <span class="tab-label">Followers</span>
            <span class="tab-count">1,234</span>
        </button>
        
        <button class="filter-tab" data-tab="following">
            <span class="tab-label">Following</span>
            <span class="tab-count">248</span>
        </button>
        
        <button class="filter-tab" data-tab="suggested">
            <span class="tab-label">Suggested</span>
            <span class="tab-badge new">New</span>
        </button>
        
        <button class="filter-tab" data-tab="requests">
            <span class="tab-label">Requests</span>
            <span class="tab-count notification">3</span>
        </button>
    </div>
    
    <div class="filter-controls">
        <div class="view-toggle">
            <button class="view-option active" data-view="grid" title="Grid view">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                </svg>
            </button>
            <button class="view-option" data-view="list" title="List view">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
            </button>
        </div>
        
        <select class="sort-select" id="sortUsers">
            <option value="recent">Recently Active</option>
            <option value="name">Name A-Z</option>
            <option value="mutual">Mutual Friends</option>
            <option value="miles">Miles Ridden</option>
            <option value="joined">Recently Joined</option>
        </select>
    </div>
</div>

<!-- Advanced Filters (Hidden by default) -->
<div class="advanced-filters" id="advancedFilters" style="display: none;">
    <div class="filter-group">
        <label>Location</label>
        <select class="filter-select">
            <option value="">Any Location</option>
            <option value="nearby">Within 25 miles</option>
            <option value="city">Same City</option>
            <option value="state">Same State</option>
            <option value="country">Same Country</option>
        </select>
    </div>
    
    <div class="filter-group">
        <label>Riding Style</label>
        <select class="filter-select">
            <option value="">Any Style</option>
            <option value="road">Road Cycling</option>
            <option value="mountain">Mountain Biking</option>
            <option value="gravel">Gravel/Adventure</option>
            <option value="commute">Commuting</option>
        </select>
    </div>
    
    <div class="filter-group">
        <label>Activity Level</label>
        <select class="filter-select">
            <option value="">Any Level</option>
            <option value="daily">Daily Rider</option>
            <option value="weekly">Weekly Rider</option>
            <option value="weekend">Weekend Warrior</option>
            <option value="occasional">Occasional</option>
        </select>
    </div>
    
    <button class="btn-link" id="clearFilters">Clear Filters</button>
</div>