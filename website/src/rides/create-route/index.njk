<style>
  .route-builder {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 24px;
    height: calc(100vh - 200px);
  }

  .map-container {
    background: var(--card-bg);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }

  .map-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: var(--text-secondary);
    font-size: 18px;
  }

  .route-controls {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 24px;
    overflow-y: auto;
  }

  .route-info {
    display: grid;
    gap: 16px;
    margin-bottom: 24px;
  }

  .route-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin: 20px 0;
  }

  .stat-box {
    background: rgba(255, 255, 255, 0.03);
    padding: 12px;
    border-radius: 8px;
    text-align: center;
  }

  .stat-value {
    font-size: 24px;
    font-weight: bold;
    color: var(--accent);
  }

  .stat-label {
    font-size: 12px;
    color: var(--text-secondary);
    margin-top: 4px;
  }

  .waypoint-list {
    margin: 20px 0;
  }

  .waypoint-item {
    background: rgba(255, 255, 255, 0.03);
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .waypoint-marker {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--accent);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
  }

  .waypoint-info {
    flex: 1;
  }

  .waypoint-address {
    font-size: 14px;
    color: var(--text-primary);
  }

  .waypoint-type {
    font-size: 12px;
    color: var(--text-secondary);
  }

  .route-options {
    margin: 24px 0;
  }

  .option-group {
    margin-bottom: 20px;
  }

  .option-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
  }

  .route-type-options {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
  }

  .route-type-btn {
    padding: 12px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .route-type-btn:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .route-type-btn.active {
    background: var(--accent);
    border-color: var(--accent);
  }

  .elevation-profile {
    background: rgba(255, 255, 255, 0.03);
    padding: 16px;
    border-radius: 8px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    font-size: 14px;
    margin: 20px 0;
  }

  .action-buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .map-tools {
    position: absolute;
    top: 20px;
    left: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .tool-btn {
    width: 40px;
    height: 40px;
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .tool-btn:hover {
    background: var(--accent);
  }

  @media (max-width: 768px) {
    .route-builder {
      grid-template-columns: 1fr;
      height: auto;
    }

    .map-container {
      height: 400px;
    }

    .route-controls {
      height: auto;
    }
  }
</style>

<div class="route-builder">
  <div class="map-container" id="map-container">
    <!-- Map will be initialized here -->
  </div>

  <div class="route-controls">
    <div class="route-info">
      <div class="form-group">
        <label for="routeName">Route Name</label>
        <input type="text" id="routeName" placeholder="Morning Century Ride" required>
      </div>

      <div class="route-stats">
        <div class="stat-box">
          <div class="stat-value">0.0</div>
          <div class="stat-label">Distance (mi)</div>
        </div>
        <div class="stat-box">
          <div class="stat-value">0</div>
          <div class="stat-label">Elevation (ft)</div>
        </div>
      </div>

      <div class="form-group">
        <label for="routeDescription">Description</label>
        <textarea id="routeDescription" rows="3" placeholder="Describe your route..."></textarea>
      </div>
    </div>

    <div class="route-options">
      <div class="option-group">
        <label>Route Type</label>
        <div class="route-type-options">
          <button class="route-type-btn active">üö¥ Road</button>
          <button class="route-type-btn">üèîÔ∏è MTB</button>
          <button class="route-type-btn">üöµ Gravel</button>
        </div>
      </div>

      <div class="option-group">
        <label>Route Preferences</label>
        <label class="checkbox-label">
          <input type="checkbox" checked>
          <span>Prefer bike paths</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox">
          <span>Avoid highways</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox" checked>
          <span>Minimize elevation</span>
        </label>
      </div>
    </div>

    <div class="waypoint-list">
      <h3>Waypoints</h3>
      <div class="waypoint-item">
        <div class="waypoint-marker">A</div>
        <div class="waypoint-info">
          <div class="waypoint-address">Click map to add start point</div>
          <div class="waypoint-type">Start</div>
        </div>
      </div>
    </div>

    <div class="elevation-profile">
      Elevation profile will appear here
    </div>

    <div class="action-buttons">
      <button class="btn-secondary">Save as Draft</button>
      <button class="btn-primary">Create Route</button>
    </div>
  </div>
</div>

<script src="/assets/js/route-builder.js"></script>