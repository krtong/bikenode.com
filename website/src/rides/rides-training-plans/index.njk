<script>
  // Filter functionality
  document.querySelectorAll('.rides-training-plans-filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      if (btn.parentElement.classList.contains('rides-training-plans-filter-group')) {
        // For grouped filters, only one active per group
        btn.parentElement.querySelectorAll('.rides-training-plans-filter-btn').forEach(b => b.classList.remove('active'));
      }
      btn.classList.toggle('active');
    });
  });

  // Plan card click
  document.querySelectorAll('.rides-training-plans-plan-card').forEach(card => {
    card.addEventListener('click', (e) => {
      if (!e.target.classList.contains('rides-training-plans-btn-primary')) {
        window.location.href = '/training-plan-details/';
      }
    });
  });

  // Week progress
  document.querySelectorAll('.rides-training-plans-week-dot').forEach(dot => {
    dot.addEventListener('click', () => {
      alert(`Week ${dot.textContent} details`);
    });
  });
</script>