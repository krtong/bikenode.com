<div class="rides-segments-leaderboard-filters">
    <div class="rides-segments-leaderboard-filter-group">
        <label class="rides-segments-leaderboard-filter-label">Distance</label>
        <select class="rides-segments-leaderboard-filter-select" id="rides-segments-leaderboard-distance-filter">
            <option value="all">All distances</option>
            <option value="0-5">0-5 km</option>
            <option value="5-10">5-10 km</option>
            <option value="10-20">10-20 km</option>
            <option value="20+">20+ km</option>
        </select>
    </div>
    
    <div class="rides-segments-leaderboard-filter-group">
        <label class="rides-segments-leaderboard-filter-label">Elevation</label>
        <select class="rides-segments-leaderboard-filter-select" id="rides-segments-leaderboard-elevation-filter">
            <option value="all">All elevations</option>
            <option value="0-100">0-100 m</option>
            <option value="100-300">100-300 m</option>
            <option value="300-500">300-500 m</option>
            <option value="500+">500+ m</option>
        </select>
    </div>
    
    <div class="rides-segments-leaderboard-filter-group">
        <label class="rides-segments-leaderboard-filter-label">Surface</label>
        <select class="rides-segments-leaderboard-filter-select" id="rides-segments-leaderboard-surface-filter">
            <option value="all">All surfaces</option>
            <option value="road">Road</option>
            <option value="gravel">Gravel</option>
            <option value="trail">Trail</option>
            <option value="mixed">Mixed</option>
        </select>
    </div>
    
    <div class="rides-segments-leaderboard-filter-group">
        <label class="rides-segments-leaderboard-filter-label">Sort by</label>
        <select class="rides-segments-leaderboard-filter-select" id="rides-segments-leaderboard-sort-filter">
            <option value="popular">Most popular</option>
            <option value="nearest">Nearest</option>
            <option value="longest">Longest</option>
            <option value="elevation">Most elevation</option>
            <option value="recent">Recently created</option>
        </select>
    </div>
    
    <button class="rides-segments-leaderboard-btn rides-segments-leaderboard-btn-text" id="rides-segments-leaderboard-reset-filters">
        Reset filters
    </button>
</div>