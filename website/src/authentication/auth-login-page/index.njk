<div class="auth-login-page-container">
    <div class="auth-login-page-card">
        <h1 class="auth-login-page-title">Welcome Back</h1>
        <p class="auth-login-page-subtitle">Sign in to your BikeNode account</p>
        
        <form class="auth-login-page-form">
            <div class="auth-login-page-form-group">
                <label class="auth-login-page-form-label">Email</label>
                <input type="email" class="auth-login-page-form-input" placeholder="you@example.com">
            </div>
            
            <div class="auth-login-page-form-group">
                <label class="auth-login-page-form-label">Password</label>
                <input type="password" class="auth-login-page-form-input" placeholder="••••••••">
            </div>
            
            <button type="submit" class="auth-login-page-submit-button">Sign In</button>
        </form>
        
        <div class="auth-login-page-links">
            <a href="/auth-forgot-password/" class="auth-login-page-forgot-link">Forgot password?</a>
        </div>
        
        <div class="auth-login-page-signup-prompt">
            <p class="auth-login-page-signup-text">Don't have an account? <a href="/auth-signup-page/" class="auth-login-page-signup-link">Sign up</a></p>
        </div>
    </div>
</div>

