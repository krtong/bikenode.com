function viewProfile(userId) {
    alert(`View profile ${userId}`);
}

function messageUser(userId) {
    alert(`Message user ${userId}`);
}

function suspendUser(userId) {
    if (confirm('Are you sure you want to suspend this user?')) {
        alert(`User ${userId} suspended`);
    }
}

function unsuspendUser(userId) {
    if (confirm('Are you sure you want to unsuspend this user?')) {
        alert(`User ${userId} unsuspended`);
    }
}

function approveUser(userId) {
    if (confirm('Approve this user account?')) {
        alert(`User ${userId} approved`);
    }
}

function rejectUser(userId) {
    if (confirm('Reject this user account?')) {
        alert(`User ${userId} rejected`);
    }
}

function exportUsers() {
    alert('Exporting user data...');
}

function inviteUser() {
    alert('Opening invite user dialog...');
}

function bulkAction() {
    alert('Opening bulk actions menu...');
}

function refreshTable() {
    alert('Refreshing user table...');
}

// Select all functionality
document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('input[name="user-select"]');
    checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
    });
});
</script>