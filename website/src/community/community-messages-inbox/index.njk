<script>
// Filter functionality
document.querySelectorAll('.community-messages-inbox-filter').forEach(filter => {
  filter.addEventListener('click', function() {
    // Update active filter
    document.querySelectorAll('.community-messages-inbox-filter').forEach(f => f.classList.remove('active'));
    this.classList.add('active');
    
    // Filter messages
    const filterType = this.dataset.filter;
    const messages = document.querySelectorAll('.community-messages-inbox-item');
    
    messages.forEach(message => {
      if (filterType === 'all') {
        message.style.display = 'block';
      } else if (filterType === 'unread' && message.classList.contains('unread')) {
        message.style.display = 'block';
      } else if (filterType === message.dataset.type) {
        message.style.display = 'block';
      } else {
        message.style.display = 'none';
      }
    });
  });
});
</script>