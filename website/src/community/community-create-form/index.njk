<div class="community-create-form-container">
    <div class="community-create-form-wrapper">
        <form class="community-create-form" id="community-create-form">
            <!-- Basic Information -->
            <div class="community-create-form-section">
                <div class="community-create-form-section-header">
                    <h2>Basic Information</h2>
                    <p>Tell us about your community</p>
                </div>
                
                <div class="community-create-form-grid">
                    <div class="community-create-form-group full-width">
                        <label for="community-create-form-name">Community Name *</label>
                        <input type="text" id="community-create-form-name" name="name" placeholder="e.g., Sport Bike Riders" required>
                        <div class="community-create-form-field-hint">Choose a clear, descriptive name that represents your community</div>
                    </div>
                    
                    <div class="community-create-form-group">
                        <label for="community-create-form-category">Category *</label>
                        <select id="community-create-form-category" name="category" required>
                            <option value="">Select a category</option>
                            <option value="motorcycle">Motorcycle</option>
                            <option value="bicycle">Bicycle</option>
                            <option value="general">General Discussion</option>
                            <option value="racing">Racing</option>
                            <option value="touring">Touring</option>
                            <option value="maintenance">Maintenance & Repair</option>
                            <option value="marketplace">Marketplace</option>
                        </select>
                    </div>
                    
                    <div class="community-create-form-group">
                        <label for="community-create-form-privacy">Privacy Setting *</label>
                        <select id="community-create-form-privacy" name="privacy" required>
                            <option value="public">Public - Anyone can join</option>
                            <option value="approval">Approval Required</option>
                            <option value="invite">Invite Only</option>
                            <option value="private">Private</option>
                        </select>
                    </div>
                    
                    <div class="community-create-form-group full-width">
                        <label for="community-create-form-description">Description *</label>
                        <textarea id="community-create-form-description" name="description" placeholder="Describe your community's purpose, what members can expect, and any guidelines..." rows="4" required></textarea>
                        <div class="community-create-form-field-hint">Minimum 50 characters. Be specific about your community's focus and culture.</div>
                    </div>
                </div>
            </div>

            <!-- Visual Identity -->
            <div class="community-create-form-section">
                <div class="community-create-form-section-header">
                    <h2>Visual Identity</h2>
                    <p>Make your community recognizable</p>
                </div>
                
                <div class="community-create-form-grid">
                    <div class="community-create-form-group">
                        <label>Community Avatar</label>
                        <div class="community-create-form-avatar-upload">
                            <div class="community-create-form-avatar-preview" id="community-create-form-avatar-preview">
                                <div class="community-create-form-avatar-placeholder">üì∏</div>
                            </div>
                            <div class="community-create-form-upload-controls">
                                <button type="button" class="community-create-form-btn-secondary" onclick="communityCreateFormUploadAvatar()">Upload Image</button>
                                <div class="community-create-form-upload-hint">Recommended: 256x256px, PNG or JPG</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="community-create-form-group">
                        <label>Banner Image</label>
                        <div class="community-create-form-banner-upload">
                            <div class="community-create-form-banner-preview" id="community-create-form-banner-preview">
                                <div class="community-create-form-banner-placeholder">üñºÔ∏è Add a banner image</div>
                            </div>
                            <div class="community-create-form-upload-controls">
                                <button type="button" class="community-create-form-btn-secondary" onclick="communityCreateFormUploadBanner()">Upload Banner</button>
                                <div class="community-create-form-upload-hint">Recommended: 1200x300px, PNG or JPG</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="community-create-form-group">
                        <label for="community-create-form-color">Theme Color</label>
                        <div class="community-create-form-color-picker">
                            <input type="color" id="community-create-form-color" name="color" value="#5865f2">
                            <div class="community-create-form-color-presets">
                                <button type="button" class="community-create-form-color-preset" style="background: #5865f2" onclick="communityCreateFormSetColor('#5865f2')"></button>
                                <button type="button" class="community-create-form-color-preset" style="background: #57f287" onclick="communityCreateFormSetColor('#57f287')"></button>
                                <button type="button" class="community-create-form-color-preset" style="background: #fee75c" onclick="communityCreateFormSetColor('#fee75c')"></button>
                                <button type="button" class="community-create-form-color-preset" style="background: #eb459e" onclick="communityCreateFormSetColor('#eb459e')"></button>
                                <button type="button" class="community-create-form-color-preset" style="background: #ed4245" onclick="communityCreateFormSetColor('#ed4245')"></button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="community-create-form-group">
                        <label for="community-create-form-emoji">Community Emoji</label>
                        <div class="community-create-form-emoji-picker">
                            <input type="text" id="community-create-form-emoji" name="emoji" placeholder="üèçÔ∏è" maxlength="2">
                            <div class="community-create-form-emoji-suggestions">
                                <button type="button" class="community-create-form-emoji-btn" onclick="communityCreateFormSetEmoji('üèçÔ∏è')">üèçÔ∏è</button>
                                <button type="button" class="community-create-form-emoji-btn" onclick="communityCreateFormSetEmoji('üö¥')">üö¥</button>
                                <button type="button" class="community-create-form-emoji-btn" onclick="communityCreateFormSetEmoji('üèÅ')">üèÅ</button>
                                <button type="button" class="community-create-form-emoji-btn" onclick="communityCreateFormSetEmoji('üõ£Ô∏è')">üõ£Ô∏è</button>
                                <button type="button" class="community-create-form-emoji-btn" onclick="communityCreateFormSetEmoji('‚ö°')">‚ö°</button>
                                <button type="button" class="community-create-form-emoji-btn" onclick="communityCreateFormSetEmoji('üîß')">üîß</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Community Rules -->
            <div class="community-create-form-section">
                <div class="community-create-form-section-header">
                    <h2>Community Guidelines</h2>
                    <p>Set expectations for your members</p>
                </div>
                
                <div class="community-create-form-rules-container">
                    <div class="community-create-form-rule-item">
                        <input type="text" placeholder="Rule 1: Be respectful to all members" name="rules[]">
                        <button type="button" class="community-create-form-remove-rule" onclick="communityCreateFormRemoveRule(this)">‚ùå</button>
                    </div>
                    <div class="community-create-form-rule-item">
                        <input type="text" placeholder="Rule 2: Stay on topic" name="rules[]">
                        <button type="button" class="community-create-form-remove-rule" onclick="communityCreateFormRemoveRule(this)">‚ùå</button>
                    </div>
                    <div class="community-create-form-rule-item">
                        <input type="text" placeholder="Rule 3: No spam or self-promotion" name="rules[]">
                        <button type="button" class="community-create-form-remove-rule" onclick="communityCreateFormRemoveRule(this)">‚ùå</button>
                    </div>
                </div>
                
                <button type="button" class="community-create-form-btn-secondary community-create-form-add-rule" onclick="communityCreateFormAddRule()">‚ûï Add Rule</button>
            </div>

            <!-- Features & Integration -->
            <div class="community-create-form-section">
                <div class="community-create-form-section-header">
                    <h2>Features & Integration</h2>
                    <p>Choose what features to enable</p>
                </div>
                
                <div class="community-create-form-features-grid">
                    <label class="community-create-form-feature-card">
                        <input type="checkbox" name="features[]" value="discord" checked>
                        <div class="community-create-form-feature-content">
                            <div class="community-create-form-feature-icon">ü§ñ</div>
                            <div class="community-create-form-feature-info">
                                <h3>Discord Integration</h3>
                                <p>Connect with Discord servers and enable bot features</p>
                            </div>
                        </div>
                    </label>
                    
                    <label class="community-create-form-feature-card">
                        <input type="checkbox" name="features[]" value="marketplace">
                        <div class="community-create-form-feature-content">
                            <div class="community-create-form-feature-icon">üõí</div>
                            <div class="community-create-form-feature-info">
                                <h3>Marketplace</h3>
                                <p>Allow members to buy and sell bikes and parts</p>
                            </div>
                        </div>
                    </label>
                    
                    <label class="community-create-form-feature-card">
                        <input type="checkbox" name="features[]" value="events">
                        <div class="community-create-form-feature-content">
                            <div class="community-create-form-feature-icon">üìÖ</div>
                            <div class="community-create-form-feature-info">
                                <h3>Events</h3>
                                <p>Organize rides, meetups, and community events</p>
                            </div>
                        </div>
                    </label>
                    
                    <label class="community-create-form-feature-card">
                        <input type="checkbox" name="features[]" value="garage">
                        <div class="community-create-form-feature-content">
                            <div class="community-create-form-feature-icon">üèçÔ∏è</div>
                            <div class="community-create-form-feature-info">
                                <h3>Shared Garage</h3>
                                <p>Members can showcase their bikes to the community</p>
                            </div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="community-create-form-actions">
                <button type="button" class="community-create-form-btn-secondary" onclick="communityCreateFormSaveDraft()">üíæ Save as Draft</button>
                <button type="button" class="community-create-form-btn-secondary" onclick="communityCreateFormPreviewCommunity()">üëÅÔ∏è Preview</button>
                <button type="submit" class="community-create-form-btn-primary">üöÄ Create Community</button>
            </div>
        </form>
    </div>

    <!-- Preview Panel -->
    <div class="community-create-form-preview-panel" id="community-create-form-preview-panel">
        <div class="community-create-form-preview-header">
            <h3>Live Preview</h3>
            <button class="community-create-form-close-preview" onclick="communityCreateFormClosePreview()">‚úï</button>
        </div>
        
        <div class="community-create-form-community-preview">
            <div class="community-create-form-preview-banner" id="community-create-form-preview-banner"></div>
            <div class="community-create-form-preview-content">
                <div class="community-create-form-preview-avatar" id="community-create-form-preview-avatar">üèçÔ∏è</div>
