inlineJS: |
  function sortTopics(sortBy) {
    const topics = document.querySelectorAll('.topic-item');
    const sortButtons = document.querySelectorAll('.sort-btn');
    
    sortButtons.forEach(btn => btn.classList.remove('active'));
    document.querySelector(`[data-sort="${sortBy}"]`).classList.add('active');
    
    const topicsArray = Array.from(topics);
    const topicsContainer = document.querySelector('.topics-list');
    
    topicsArray.sort((a, b) => {
      switch(sortBy) {
        case 'newest':
          return new Date(b.dataset.created) - new Date(a.dataset.created);
        case 'oldest':
          return new Date(a.dataset.created) - new Date(b.dataset.created);
        case 'popular':
          return parseInt(b.dataset.replies) - parseInt(a.dataset.replies);
        case 'views':
          return parseInt(b.dataset.views) - parseInt(a.dataset.views);
        default:
          return 0;
      }
    });
    
    topicsContainer.innerHTML = '';
    topicsArray.forEach(topic => topicsContainer.appendChild(topic));
  }
  
  function filterTopics(filter) {
    const topics = document.querySelectorAll('.topic-item');
    const filterButtons = document.querySelectorAll('.filter-btn');
    
    filterButtons.forEach(btn => btn.classList.remove('active'));
    document.querySelector(`[data-filter="${filter}"]`).classList.add('active');
    
    topics.forEach(topic => {
      if (filter === 'all' || topic.dataset.filter === filter) {
        topic.style.display = 'block';
      } else {
        topic.style.display = 'none';
      }
    });
  }
  
  function searchTopics() {
    const searchTerm = document.getElementById('topic-search').value.toLowerCase();
    const topics = document.querySelectorAll('.topic-item');
    
    topics.forEach(topic => {
      const title = topic.querySelector('.topic-title').textContent.toLowerCase();
      const content = topic.querySelector('.topic-preview')?.textContent.toLowerCase() || '';
      
      if (title.includes(searchTerm) || content.includes(searchTerm)) {
        topic.style.display = 'block';
      } else {
        topic.style.display = 'none';
      }
    });
  }
  
  function createNewTopic() {
    window.location.href = '/forums/mountain-bikes/new-topic/';
  }
  
  function followCategory() {
    const btn = document.getElementById('follow-btn');
    const isFollowing = btn.classList.contains('following');
    
    if (isFollowing) {
      btn.classList.remove('following');
      btn.innerHTML = '<i class="icon">👁</i> Follow';
    } else {
      btn.classList.add('following');
      btn.innerHTML = '<i class="icon">✓</i> Following';
    }
  }
  
  function subscribeTopic(topicId) {
    const btn = document.querySelector(`[data-topic="${topicId}"] .subscribe-btn`);
    const isSubscribed = btn.classList.contains('subscribed');
    
    if (isSubscribed) {
      btn.classList.remove('subscribed');
      btn.textContent = 'Subscribe';
    } else {
      btn.classList.add('subscribed');
      btn.textContent = 'Subscribed';
    }
  }
