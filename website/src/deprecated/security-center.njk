<style>
.security-alerts {
    display: grid;
    gap: 20px;
    margin-bottom: 32px;
}

.alert-banner {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 20px;
    display: flex;
    align-items: center;
    gap: 16px;
}

.alert-critical {
    border: 2px solid #ef4444;
    background: rgba(239, 68, 68, 0.05);
}

.alert-warning {
    border: 2px solid #f59e0b;
    background: rgba(245, 158, 11, 0.05);
}

.alert-icon {
    font-size: 2rem;
    flex-shrink: 0;
}

.alert-content {
    flex: 1;
}

.alert-title {
    color: var(--text-primary);
    font-weight: 600;
    margin: 0 0 4px 0;
}

.alert-description {
    color: var(--text-secondary);
    margin: 0;
    font-size: 0.9rem;
}

.alert-actions {
    display: flex;
    gap: 12px;
}

.security-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
}

.security-card {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 24px;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.card-title {
    color: var(--text-primary);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
}

.status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    flex-shrink: 0;
}

.status-good { background: #10b981; }
.status-warning { background: #f59e0b; }
.status-critical { background: #ef4444; }

.threat-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.threat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
}

.threat-info {
    display: flex;
    align-items: center;
    gap: 12px;
}

.threat-level {
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.8rem;
    font-weight: 500;
}

.level-high { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
.level-medium { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
.level-low { background: rgba(107, 114, 128, 0.1); color: #6b7280; }

.activity-chart {
    height: 200px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    display: flex;
    align-items: flex-end;
    padding: 20px;
    gap: 8px;
}

.chart-bar {
    flex: 1;
    background: var(--accent);
    border-radius: 4px 4px 0 0;
    min-height: 20px;
    position: relative;
}

.security-logs {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
}

.log-header {
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.log-entry {
    padding: 16px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 0.9rem;
}

.log-time {
    color: var(--text-secondary);
    width: 100px;
    flex-shrink: 0;
}

.log-event {
    flex: 1;
    color: var(--text-primary);
}

.log-ip {
    color: var(--text-secondary);
    font-family: monospace;
}

.log-action {
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.8rem;
}

.action-blocked { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
.action-monitored { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
.action-allowed { background: rgba(16, 185, 129, 0.1); color: #10b981; }
</style>

