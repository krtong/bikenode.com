  }

  .filter-btn.active {
    background: var(--accent);
    border-color: var(--accent);
  }

  .plans-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 24px;
  }

  .plan-card {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .plan-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  .plan-header {
    padding: 20px;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-hover) 100%);
  }

  .plan-category {
    font-size: 12px;
    text-transform: uppercase;
    opacity: 0.9;
    margin-bottom: 4px;
  }

  .plan-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .plan-duration {
    font-size: 14px;
    opacity: 0.9;
  }

  .plan-body {
    padding: 20px;
  }

  .plan-description {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
    line-height: 1.5;
  }

  .plan-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    margin-bottom: 16px;
  }

  .plan-stat {
    text-align: center;
    padding: 12px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 8px;
  }

  .plan-stat-value {
    font-size: 18px;
    font-weight: bold;
    color: var(--accent);
  }

  .plan-stat-label {
    font-size: 12px;
    color: var(--text-secondary);
    margin-top: 4px;
  }

  .plan-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .plan-tag {
    background: rgba(88, 101, 242, 0.1);
    color: var(--accent);
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
  }

  .plan-action {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .plan-popularity {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    color: var(--text-secondary);
  }

  .active-plan {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
    border: 2px solid var(--accent);
  }

  .active-plan-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
  }

  .active-plan-info {
    flex: 1;
  }

  .active-plan-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .active-plan-subtitle {
    color: var(--text-secondary);
  }

  .week-progress {
    display: flex;
    gap: 8px;
    margin-bottom: 20px;
  }

  .week-dot {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .week-dot.completed {
    background: var(--accent);
  }

  .week-dot.current {
    background: rgba(88, 101, 242, 0.3);
    border: 2px solid var(--accent);
  }

  .week-dot:hover {
    transform: scale(1.1);
  }

  .todays-workout {
    background: rgba(88, 101, 242, 0.1);
    border-radius: 8px;
    padding: 16px;
  }

  .workout-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .workout-details {
    display: flex;
    gap: 24px;
    margin-bottom: 12px;
  }

  .workout-detail {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
  }

  .custom-plan-cta {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 12px;
    padding: 32px;
    text-align: center;
    margin-top: 32px;
  }

  .cta-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .cta-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .cta-description {
    color: var(--text-secondary);
    margin-bottom: 20px;
  }

