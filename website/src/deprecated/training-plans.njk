<script>
  // Filter functionality
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      if (btn.parentElement.classList.contains('filter-group')) {
        // For grouped filters, only one active per group
        btn.parentElement.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      }
      btn.classList.toggle('active');
    });
  });

  // Plan card click
  document.querySelectorAll('.plan-card').forEach(card => {
    card.addEventListener('click', (e) => {
      if (!e.target.classList.contains('btn-primary')) {
        window.location.href = '/training-plan-details/';
      }
    });
  });

  // Week progress
  document.querySelectorAll('.week-dot').forEach(dot => {
    dot.addEventListener('click', () => {
      alert(`Week ${dot.textContent} details`);
    });
  });
</script>