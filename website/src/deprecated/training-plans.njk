<style>
  .training-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .plan-filters {
    display: flex;
    gap: 16px;
    margin-bottom: 32px;
  }

  .filter-group {
    display: flex;
    gap: 8px;
  }

  .filter-btn {
    padding: 8px 16px;
