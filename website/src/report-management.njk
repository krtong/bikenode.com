    font-size: 0.8rem;
    font-weight: 500;
}

.type-content { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
.type-user { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
.type-community { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
.type-spam { background: rgba(107, 114, 128, 0.1); color: #6b7280; }

.report-title {
    color: var(--text-primary);
    font-weight: 600;
    margin: 0;
}

.report-meta {
    display: flex;
    gap: 16px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 12px;
}

.report-description {
    color: var(--text-secondary);
    margin: 0 0 12px 0;
    font-size: 0.9rem;
}

.report-actions {
    display: flex;
    gap: 12px;
}

.action-btn {
    padding: 6px 16px;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-review {
    background: var(--accent);
    color: white;
}

.btn-review:hover {
    background: #4c5cdb;
}

.btn-dismiss {
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-secondary);
