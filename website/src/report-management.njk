}

.report-item:hover {
    background: rgba(255, 255, 255, 0.02);
}

.report-priority {
    width: 4px;
    border-radius: 2px;
    flex-shrink: 0;
}

.priority-critical { background: #ef4444; }
.priority-high { background: #f59e0b; }
.priority-medium { background: #3b82f6; }
.priority-low { background: #6b7280; }

.report-content {
