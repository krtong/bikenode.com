{# Dashboard V2 - Stats Card Component #}
{# 
  Usage: {% include "dashboard-v2/components/stats-card.njk" %}
  
  Parameters:
  - icon: SVG icon content
  - iconClass: CSS class for icon container (rides, time, elevation, achievements)
  - value: Main stat value
  - unit: Unit of measurement (optional)
  - label: Stat label
  - change: Change percentage (optional)
  - changeType: 'positive' or 'negative' (optional)
  - changeText: Custom change text (optional)
#}

<div class="stat-card">
  <div class="stat-icon {{ iconClass }}">
    {{ icon | safe }}
  </div>
  <div class="stat-content">
    <h3 class="stat-value">
      {{ value }}
      {% if unit %}
        <span class="stat-unit">{{ unit }}</span>
      {% endif %}
    </h3>
    <p class="stat-label">{{ label }}</p>
    {% if change %}
      <div class="stat-change {{ changeType }}">
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
          {% if changeType == 'positive' %}
            <path d="M6 9V3M6 3L3 6M6 3L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          {% else %}
            <path d="M6 3V9M6 9L3 6M6 9L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          {% endif %}
        </svg>
        {{ changeText or (change + '% from last month') }}
      </div>
    {% elif changeText %}
      <div class="stat-change">
        <span class="stat-new">{{ changeText }}</span>
      </div>
    {% endif %}
  </div>
</div>