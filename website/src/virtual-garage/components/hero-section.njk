<!-- Hero Section -->
<section class="feature-hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge">üèçÔ∏è Virtual Garage</div>
            <h1 class="hero-title">Your Complete Bike <span class="gradient-text">Collection Platform</span></h1>
            <p class="hero-subtitle">
                Catalog, track, and showcase your bikes with detailed specifications, photo galleries, 
                maintenance records, and community sharing features.
            </p>
            <div class="hero-buttons">
                <a href="/mock-signup/" class="btn-primary btn-large">Start Your Garage</a>
                <a href="/dashboard/" class="btn-secondary btn-large">View Demo</a>
            </div>
        </div>
        
        <div class="hero-image">
            <div class="garage-preview">
                <div class="preview-header">
                    <div class="preview-title">My Virtual Garage</div>
                    <div class="preview-stats">
                        <span>5 Bikes</span>
                        <span>‚Ä¢</span>
                        <span>24 Photos</span>
                        <span>‚Ä¢</span>
                        <span>12 Records</span>
                    </div>
                </div>
                <div class="preview-bikes">
                    {% for bike in bikes | slice(0, 3) %}
                    <div class="preview-bike">
                        <div class="bike-image-small">
                            <img src="{{ bike.image }}" alt="{{ bike.name }}">
                        </div>
                        <div class="bike-info-small">
                            <div class="bike-name">{{ bike.name }}</div>
                            <div class="bike-type">{{ bike.type }}</div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>