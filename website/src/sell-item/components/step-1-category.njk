<!-- Step 1: Category Selection -->
<div class="form-step active" data-step="1">
    <div class="step-header">
        <h2>What are you selling?</h2>
        <p>Choose the category that best fits your item</p>
    </div>
    
    <!-- Option to select from owned bikes -->
    <div class="owned-bikes-section">
        <div class="owned-bikes-header">
            <h3>Select from your garage</h3>
            <p>Quick-list a bike you already own</p>
        </div>
        <div class="owned-bikes-grid" id="ownedBikesGrid">
            <!-- User's bikes will be loaded here -->
            <div class="loading-placeholder">Loading your bikes...</div>
        </div>
        <div class="divider">
            <span>OR</span>
        </div>
    </div>
    
    <div class="category-grid">
        <label class="category-card">
            <input type="radio" name="mainCategory" value="motorcycle" required>
            <div class="category-content">
                <div class="category-icon">üèçÔ∏è</div>
                <h3>Motorcycle</h3>
                <p>Sport, cruiser, adventure, etc.</p>
            </div>
        </label>
        
        <label class="category-card">
            <input type="radio" name="mainCategory" value="bicycle" required>
            <div class="category-content">
                <div class="category-icon">üö¥</div>
                <h3>Bicycle</h3>
                <p>Road, mountain, hybrid, etc.</p>
            </div>
        </label>
        
        <label class="category-card">
            <input type="radio" name="mainCategory" value="parts" required>
            <div class="category-content">
                <div class="category-icon">üîß</div>
                <h3>Parts & Accessories</h3>
                <p>Components, tools, upgrades</p>
            </div>
        </label>
        
        <label class="category-card">
            <input type="radio" name="mainCategory" value="gear" required>
            <div class="category-content">
                <div class="category-icon">üß§</div>
                <h3>Riding Gear</h3>
                <p>Helmets, jackets, gloves, etc.</p>
            </div>
        </label>
    </div>
    
    <!-- Bike Selection Section (hidden by default) -->
    <div class="bike-selection-section" id="bikeSelectionSection" style="display: none;">
        <h3>Select your bike</h3>
        <div class="selection-grid">
            <div class="selection-step" id="brandSelection">
                <label class="form-label">Brand</label>
                <select name="bikeBrand" id="bikeBrandSelect" class="form-select">
                    <option value="">Loading brands...</option>
                </select>
            </div>
            
            <div class="selection-step" id="yearSelection" style="display: none;">
                <label class="form-label">Year</label>
                <select name="bikeYear" id="bikeYearSelect" class="form-select">
                    <option value="">Select year...</option>
                </select>
            </div>
            
            <div class="selection-step" id="modelSelection" style="display: none;">
                <label class="form-label">Model</label>
                <select name="bikeModel" id="bikeModelSelect" class="form-select">
                    <option value="">Select model...</option>
                </select>
            </div>
        </div>
    </div>
</div>