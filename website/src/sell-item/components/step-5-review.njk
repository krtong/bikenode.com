<!-- Step 5: Review & Publish -->
<div class="form-step" data-step="5">
    <div class="step-header">
        <h2>Review your listing</h2>
        <p>Make sure everything looks good before publishing</p>
    </div>
    
    <div class="listing-preview">
        <div class="preview-card">
            <div class="preview-header">
                <h3 id="previewTitle">Your Listing Title</h3>
                <div class="preview-price" id="previewPrice">$0</div>
            </div>
            
            <div class="preview-gallery" id="previewGallery">
                <!-- Photo thumbnails will be shown here -->
            </div>
            
            <div class="preview-details">
                <div class="detail-row">
                    <span class="detail-label">Category:</span>
                    <span class="detail-value" id="previewCategory">-</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Condition:</span>
                    <span class="detail-value" id="previewCondition">-</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Location:</span>
                    <span class="detail-value" id="previewLocation">-</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Delivery:</span>
                    <span class="detail-value" id="previewDelivery">-</span>
                </div>
            </div>
            
            <div class="preview-description">
                <h4>Description</h4>
                <p id="previewDescription">-</p>
            </div>
        </div>
    </div>
    
    <div class="listing-options">
        <h3>Choose your listing package</h3>
        
        <div class="package-grid">
            <label class="package-card">
                <input type="radio" name="listingPackage" value="basic" checked>
                <div class="package-content">
                    <h4>Basic</h4>
                    <div class="package-price">Free</div>
                    <ul class="package-features">
                        <li>30-day listing</li>
                        <li>Standard visibility</li>
                        <li>Basic analytics</li>
                    </ul>
                </div>
            </label>
            
            <label class="package-card featured">
                <input type="radio" name="listingPackage" value="featured">
                <div class="package-content">
                    <div class="featured-badge">Most Popular</div>
                    <h4>Featured</h4>
                    <div class="package-price">$4.99</div>
                    <ul class="package-features">
                        <li>45-day listing</li>
                        <li>Featured placement</li>
                        <li>Detailed analytics</li>
                        <li>Highlighted in search</li>
                        <li>Social media boost</li>
                    </ul>
                </div>
            </label>
            
            <label class="package-card">
                <input type="radio" name="listingPackage" value="premium">
                <div class="package-content">
                    <h4>Premium</h4>
                    <div class="package-price">$9.99</div>
                    <ul class="package-features">
                        <li>60-day listing</li>
                        <li>Top placement</li>
                        <li>Advanced analytics</li>
                        <li>Priority in search</li>
                        <li>Featured on homepage</li>
                        <li>Email blast inclusion</li>
                    </ul>
                </div>
            </label>
        </div>
    </div>
    
    <div class="terms-section">
        <label class="checkbox-label">
            <input type="checkbox" name="agreeTerms" id="agreeTerms" required>
            <span>I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/marketplace/policies" target="_blank">Marketplace Policies</a></span>
        </label>
    </div>
</div>