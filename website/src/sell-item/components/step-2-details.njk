<!-- Step 2: Item Details -->
<div class="form-step" data-step="2">
    <div class="step-header">
        <h2>Tell us about your item</h2>
        <p>Provide detailed information to help buyers</p>
    </div>
    
    <div class="form-grid">
        <!-- Auto-filled from bike selection or manual entry -->
        <div class="form-group full-width" id="selectedBikeInfo" style="display: none;">
            <div class="selected-bike-card">
                <h3 id="selectedBikeName">-</h3>
                <p id="selectedBikeDetails">-</p>
            </div>
        </div>
        
        <div class="form-group full-width">
            <label for="listingTitle" class="form-label">Listing Title*</label>
            <input type="text" id="listingTitle" name="title" class="form-input" 
                   placeholder="e.g., 2023 Trek Fuel EX 8 - Excellent Condition" required>
            <small class="form-hint">Make it descriptive and include key details</small>
        </div>
        
        <!-- These fields will be auto-filled if bike is selected from database -->
        <div class="form-group">
            <label for="brand" class="form-label">Brand*</label>
            <input type="text" id="brand" name="brand" class="form-input" 
                   placeholder="e.g., Trek, Specialized, Yamaha" required>
        </div>
        
        <div class="form-group">
            <label for="model" class="form-label">Model*</label>
            <input type="text" id="model" name="model" class="form-input" 
                   placeholder="e.g., Fuel EX 8, R1" required>
        </div>
        
        <div class="form-group">
            <label for="year" class="form-label">Year*</label>
            <select id="year" name="year" class="form-select" required>
                <option value="">Select year</option>
                {% for year in range(2025, 1979, -1) %}
                <option value="{{ year }}">{{ year }}</option>
                {% endfor %}
            </select>
        </div>
        
        <!-- VIN Number (for motorcycles) -->
        <div class="form-group" id="vinGroup" style="display: none;">
            <label for="vin" class="form-label">VIN Number</label>
            <input type="text" id="vin" name="vin" class="form-input" 
                   placeholder="17-character VIN" maxlength="17">
            <small class="form-hint">Helps verify authenticity</small>
        </div>
        
        <!-- Odometer Reading -->
        <div class="form-group" id="odometerGroup">
            <label for="odometer" class="form-label">Mileage/Odometer*</label>
            <div class="input-with-unit">
                <input type="number" id="odometer" name="odometer" class="form-input" 
                       placeholder="e.g., 5000" required>
                <span class="unit-label">miles</span>
            </div>
            <small class="form-hint">Current mileage reading</small>
        </div>
        
        <div class="form-group">
            <label for="condition" class="form-label">Overall Condition*</label>
            <select id="condition" name="condition" class="form-select" required>
                <option value="">Select condition</option>
                <option value="new">New - Never Used</option>
                <option value="like-new">Like New - Minimal Use</option>
                <option value="excellent">Excellent - Light Use, Well Maintained</option>
                <option value="good">Good - Normal Wear, Functions Perfectly</option>
                <option value="fair">Fair - Some Issues, Still Rideable</option>
                <option value="project">Project - Needs Work</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="size" class="form-label">Size/Frame Size</label>
            <input type="text" id="size" name="size" class="form-input" 
                   placeholder="e.g., Large, 56cm, XL">
        </div>
        
        <div class="form-group">
            <label for="color" class="form-label">Color</label>
            <input type="text" id="color" name="color" class="form-input" 
                   placeholder="e.g., Matte Black, Red/White">
        </div>
        
        <!-- Detailed Condition Description -->
        <div class="form-group full-width">
            <label for="wearDescription" class="form-label">Condition Details & Wear Description*</label>
            <textarea id="wearDescription" name="wearDescription" class="form-textarea" rows="4" required
                      placeholder="Describe any wear, damage, or issues in detail. Be honest - buyers appreciate transparency.
Examples:
- Small scratch on left fairing
- Front brake pads have 50% life remaining
- New tires installed 500 miles ago
- Regular oil changes every 3000 miles"></textarea>
            <small class="form-hint">Include maintenance history and any recent service</small>
        </div>
        
        <div class="form-group full-width">
            <label for="description" class="form-label">Full Description*</label>
            <textarea id="description" name="description" class="form-textarea" rows="6" required
                      placeholder="Tell the full story of your bike. Include:
- Why you're selling
- What you love about it
- Upgrades or modifications
- What's included in the sale
- Any additional information buyers should know"></textarea>
            <small class="form-hint"><span id="charCount">0</span>/2000 characters</small>
        </div>
        
        <!-- Maintenance Records -->
        <div class="form-group full-width">
            <label class="form-label">
                <input type="checkbox" id="hasServiceRecords" name="hasServiceRecords">
                I have service/maintenance records
            </label>
        </div>
        
        <!-- Modifications/Upgrades Section -->
        <div class="form-group full-width">
            <h3>Modifications & Upgrades</h3>
            <div id="modificationsContainer" class="specifications-container">
                <div class="spec-row">
                    <input type="text" placeholder="e.g., Exhaust System" class="spec-key">
                    <input type="text" placeholder="e.g., Akrapovic Full System" class="spec-value">
                    <button type="button" class="btn-remove-spec">×</button>
                </div>
            </div>
            <button type="button" id="addModBtn" class="btn-add-spec">
                + Add Modification
            </button>
        </div>
        
        <!-- Additional Specifications -->
        <div class="form-group full-width">
            <h3>Additional Specifications</h3>
            <div id="specificationsContainer" class="specifications-container">
                <div class="spec-row">
                    <input type="text" placeholder="e.g., Weight" class="spec-key">
                    <input type="text" placeholder="e.g., 28 lbs" class="spec-value">
                    <button type="button" class="btn-remove-spec">×</button>
                </div>
            </div>
            <button type="button" id="addSpecBtn" class="btn-add-spec">
                + Add Specification
            </button>
        </div>
    </div>
</div>