<script>
// Toggle auto-moderation categories
function toggleAutoMod(category, enabled) {
    const categorySettings = event.target.closest('.mod-category').querySelector('.category-settings');
    if (enabled) {
        categorySettings.style.opacity = '1';
        categorySettings.style.pointerEvents = 'auto';
    } else {
        categorySettings.style.opacity = '0.5';
        categorySettings.style.pointerEvents = 'none';
    }
}

// Quick action functions
function openMemberSearch() {
    document.getElementById('memberSearchModal').style.display = 'flex';
}

function openBulkCleanup() {
    alert('Bulk message cleanup tool - feature coming soon');
}

function openBanHammer() {
    alert('Emergency ban tool - feature coming soon');
}

function openMassMessage() {
    alert('Mass messaging tool - feature coming soon');
}

function closeModal(modalId) {
    document.getElementById(modalId).style.display = 'none';
}

// Action functions
function viewDetails(actionId) {
    alert(`View details for action ${actionId} - feature coming soon`);
}

function undoAction(actionId) {
    if (confirm('Are you sure you want to undo this moderation action?')) {
        alert(`Undoing action ${actionId} - feature coming soon`);
    }
}

function contactModerator(modName) {
    alert(`Contact ${modName} - feature coming soon`);
}

function removeTimeout(username) {
    if (confirm(`Remove timeout for ${username}?`)) {
        alert(`Removing timeout for ${username} - feature coming soon`);
    }
}

function appealBan(username) {
    alert(`Review ban appeal for ${username} - feature coming soon`);
}

function whitelistDomain(actionId) {
    if (confirm('Add this domain to the whitelist?')) {
        alert(`Domain whitelisted - feature coming soon`);
    }
}

// Domain management
function removeDomain(button) {
    button.parentElement.remove();
}

// Add domain on Enter key
document.addEventListener('keypress', function(e) {
    if (e.target.classList.contains('domain-input') && e.key === 'Enter') {
        const input = e.target;
        const domain = input.value.trim();
        if (domain) {
            const tag = document.createElement('span');
            tag.className = 'domain-tag';
            tag.innerHTML = `${domain} <button onclick="removeDomain(this)">×</button>`;
            input.parentElement.insertBefore(tag, input);
            input.value = '';
        }
    }
});

// Moderator functions
function inviteModerator() {
    alert('Invite new moderator - feature coming soon');
}

function viewModStats(modName) {
    alert(`View detailed stats for ${modName} - feature coming soon`);
}

function contactMod(modName) {
    alert(`Send message to ${modName} - feature coming soon`);
}

// Modal click outside to close
window.addEventListener('click', function(e) {
    if (e.target.classList.contains('modal')) {
        e.target.style.display = 'none';
    }
});
</script>

