<script>
// Search functionality
const searchInput = document.getElementById('commandSearch');
const filterButtons = document.querySelectorAll('.filter-btn');
const commandCards = document.querySelectorAll('.command-card');
const categoryDivs = document.querySelectorAll('.command-category');

// Search function
function searchCommands() {
    const searchTerm = searchInput.value.toLowerCase();
    const activeCategory = document.querySelector('.filter-btn.active').dataset.category;
    
    commandCards.forEach(card => {
        const commandText = card.textContent.toLowerCase();
        const categoryDiv = card.closest('.command-category');
        const cardCategory = categoryDiv.dataset.category;
        
        const matchesSearch = commandText.includes(searchTerm);
        const matchesCategory = activeCategory === 'all' || cardCategory === activeCategory;
        
        if (matchesSearch && matchesCategory) {
            card.style.display = 'block';
        } else {
            card.style.display = 'none';
        }
    });
    
    // Show/hide category headers
    categoryDivs.forEach(categoryDiv => {
        const categoryCards = categoryDiv.querySelectorAll('.command-card');
        const visibleCards = Array.from(categoryCards).filter(card => card.style.display !== 'none');
        
        if (visibleCards.length > 0) {
            categoryDiv.style.display = 'block';
        } else {
            categoryDiv.style.display = 'none';
        }
    });
}

// Filter function
function filterCommands(category) {
    // Update active filter button
    filterButtons.forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');
    
    // Run search with new filter
    searchCommands();
}

// Event listeners
searchInput.addEventListener('input', searchCommands);
filterButtons.forEach(btn => {
    btn.addEventListener('click', filterCommands);
});

// Copy command to clipboard
document.querySelectorAll('.command-header code').forEach(code => {
    code.addEventListener('click', () => {
        navigator.clipboard.writeText(code.textContent).then(() => {
            const original = code.textContent;
            code.textContent = 'Copied!';
            setTimeout(() => {
                code.textContent = original;
            }, 1000);
        });
    });
});
</script>

