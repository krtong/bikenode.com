<!-- Routing Engine Selector Component -->
<div class="routing-engine-selector">
    <h4>Routing Engine</h4>
    
    <div class="engine-options">
        <label class="engine-option">
            <input type="radio" name="routingEngine" value="osrm" checked>
            <div class="engine-card">
                <span class="engine-name">OSRM</span>
                <span class="engine-desc">Fast, open-source routing</span>
            </div>
        </label>
        
        <label class="engine-option">
            <input type="radio" name="routingEngine" value="graphhopper">
            <div class="engine-card">
                <span class="engine-name">GraphHopper</span>
                <span class="engine-desc">Advanced routing with elevation</span>
            </div>
        </label>
        
        <label class="engine-option">
            <input type="radio" name="routingEngine" value="valhalla">
            <div class="engine-card">
                <span class="engine-name">Valhalla</span>
                <span class="engine-desc">Flexible, multi-modal routing</span>
            </div>
        </label>
        
        <label class="engine-option">
            <input type="radio" name="routingEngine" value="brouter">
            <div class="engine-card">
                <span class="engine-name">BRouter</span>
                <span class="engine-desc">Specialized bicycle routing</span>
            </div>
        </label>
    </div>
    
    <div class="engine-status">
        <span class="status-indicator" id="engineStatus">
            <span class="status-dot"></span>
            <span class="status-text">Connected</span>
        </span>
    </div>
    
    <details class="engine-settings">
        <summary>Advanced Settings</summary>
        <div class="settings-content">
            <label>
                <input type="checkbox" id="useCustomServer">
                Use custom server
            </label>
            <input type="text" id="customServerUrl" placeholder="https://your-server.com" disabled>
            
            <label>
                <input type="checkbox" id="enableAlternatives">
                Show alternative routes
            </label>
            
            <label>
                <input type="checkbox" id="enableIsochrones">
                Enable isochrone generation
            </label>
        </div>
    </details>
</div>

