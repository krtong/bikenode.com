<!-- Route Planning Sidebar Component -->
<div class="route-sidebar">
    <div class="route-header">
        <h2>Plan Your Route</h2>
        <div class="route-type-selector">
            <button class="route-type active" data-type="motorcycle">ğŸï¸ Motorcycle</button>
            <button class="route-type" data-type="bicycle">ğŸš´ Bicycle</button>
