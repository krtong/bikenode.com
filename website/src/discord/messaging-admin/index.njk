    display: flex;
    gap: 16px;
}

.message-flag {
    width: 4px;
    height: 60px;
    border-radius: 2px;
    flex-shrink: 0;
}

.flag-spam { background: #ef4444; }
.flag-inappropriate { background: #f59e0b; }
.flag-suspicious { background: #3b82f6; }
.flag-clean { background: #10b981; }

.message-content {
    flex: 1;
}

.message-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
}

.message-type {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
}

.type-dm { background: rgba(88, 101, 242, 0.1); color: var(--accent); }
.type-group { background: rgba(16, 185, 129, 0.1); color: #10b981; }
.type-community { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }

.message-meta {
    display: flex;
    gap: 16px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 8px;
}

.message-text {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    padding: 12px;
    margin-bottom: 12px;
    font-size: 0.9rem;
    border-left: 3px solid var(--accent);
}

.message-actions {
    display: flex;
    gap: 8px;
}

.action-btn-sm {
    padding: 4px 12px;
    border-radius: 6px;
    font-size: 0.8rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-approve {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.btn-flag {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}

.btn-block {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.bulk-actions {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 32px;
}

.bulk-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.bulk-controls {
    display: flex;
    gap: 12px;
    align-items: center;
}

.checkbox-group {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
}

.analytics-chart {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 24px;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.chart-container {
    height: 250px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    position: relative;
    padding: 20px;
    display: flex;
    align-items: end;
    gap: 8px;
}

.chart-bar {
    flex: 1;
    background: var(--accent);
    border-radius: 4px 4px 0 0;
    min-height: 20px;
}
</style>

