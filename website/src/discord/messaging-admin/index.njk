    border-radius: 8px;
    padding: 20px;
}

.control-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.control-title {
    color: var(--text-primary);
    font-weight: 600;
    margin: 0;
}

.control-status {
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.8rem;
}

.status-enabled {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.status-disabled {
    background: rgba(239, 68, 68, 0.1);
