    if (selectedTypes.includes('type')) roles.push('<span class="discord-bot-management-role-badge discord-bot-management-type">@MTB</span>');
    if (selectedTypes.includes('year')) roles.push('<span class="discord-bot-management-role-badge discord-bot-management-year">@2024Rider</span>');
    if (selectedTypes.includes('makemodel')) roles.push('<span class="discord-bot-management-role-badge discord-bot-management-makemodel">@TrekFuelEX</span>');
    
    if (roles.length === 0) {
        previewContainer.innerHTML = '<span class="discord-bot-management-no-roles">No roles will be assigned</span>';
    } else {
        previewContainer.innerHTML = roles.join('');
    }
}

