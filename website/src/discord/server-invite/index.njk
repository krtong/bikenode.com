<script>
// Generate invite functionality
function generateInvite() {
    const btn = document.querySelector('.generate-btn');
    const original = btn.innerHTML;
    
    btn.innerHTML = '<span class="btn-icon">⏳</span>Generating...';
    btn.disabled = true;
    
    setTimeout(() => {
        const inviteCode = 'BN' + Math.random().toString(36).substr(2, 6).toUpperCase();
        const inviteUrl = `https://discord.gg/${inviteCode}`;
        
        document.getElementById('inviteUrl').value = inviteUrl;
        document.getElementById('generatedInvite').style.display = 'block';
        
        btn.innerHTML = original;
        btn.disabled = false;
        
        // Scroll to generated invite
        document.getElementById('generatedInvite').scrollIntoView({ behavior: 'smooth' });
    }, 1500);
}

// Copy invite to clipboard
function copyInvite() {
    const inviteUrl = document.getElementById('inviteUrl');
    inviteUrl.select();
    document.execCommand('copy');
    
    const copyBtn = document.querySelector('.copy-btn');
    const original = copyBtn.textContent;
    copyBtn.textContent = 'Copied!';
    setTimeout(() => {
        copyBtn.textContent = original;
    }, 2000);
}

// Copy to clipboard helper
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
        // Show brief feedback
        console.log('Copied to clipboard');
    });
}

// Share invite
function shareInvite() {
    if (navigator.share) {
        navigator.share({
            title: 'Join Sport Bike Riders Discord',
            text: 'Join our motorcycle community on Discord!',
            url: document.getElementById('inviteUrl').value
        });
    } else {
        copyInvite();
    }
}

// Preview invite
function previewInvite() {
    window.open(document.getElementById('inviteUrl').value, '_blank');
}

// Revoke invite
function revokeInvite(code) {
    if (confirm(`Are you sure you want to revoke invite ${code || 'this invite'}?`)) {
        if (code) {
            // Remove from table
            event.target.closest('.invite-row').remove();
        } else {
            // Hide generated invite
            document.getElementById('generatedInvite').style.display = 'none';
        }
    }
}

// Edit invite
function editInvite(code) {
    alert(`Edit invite ${code} - feature coming soon`);
}

// View invite stats
function viewStats(code) {
    alert(`View detailed stats for invite ${code} - feature coming soon`);
}

// Use template
function useTemplate(type) {
    const templates = {
        event: { expiry: '1d', uses: '50', channel: 'events' },
        friend: { expiry: 'never', uses: '5', channel: 'welcome' },
        community: { expiry: '7d', uses: 'unlimited', channel: 'general' },
        temporary: { expiry: '1h', uses: '1', channel: 'welcome' }
    };
    
    const template = templates[type];
    if (template) {
        document.getElementById('inviteExpiration').value = template.expiry;
        document.getElementById('inviteMaxUses').value = template.uses;
        document.getElementById('inviteChannel').value = template.channel;
        
        // Scroll to generator
        document.querySelector('.invite-generator').scrollIntoView({ behavior: 'smooth' });
    }
}

// Simple chart placeholder (in a real app, you'd use Chart.js or similar)
window.addEventListener('load', () => {
    const canvas = document.getElementById('inviteChart');
    const ctx = canvas.getContext('2d');
    
    // Simple line chart simulation
    ctx.strokeStyle = '#5865f2';
    ctx.lineWidth = 3;
    ctx.beginPath();
    ctx.moveTo(50, 150);
    ctx.lineTo(100, 120);
    ctx.lineTo(150, 140);
    ctx.lineTo(200, 100);
    ctx.lineTo(250, 110);
    ctx.lineTo(300, 80);
    ctx.lineTo(350, 90);
    ctx.stroke();
    
    // Add some data points
    ctx.fillStyle = '#5865f2';
    [50, 100, 150, 200, 250, 300, 350].forEach((x, i) => {
        const y = [150, 120, 140, 100, 110, 80, 90][i];
        ctx.beginPath();
        ctx.arc(x, y, 4, 0, 2 * Math.PI);
        ctx.fill();
    });
});
</script>

