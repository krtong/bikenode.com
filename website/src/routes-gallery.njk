---
layout: dashboard.njk
title: Route Gallery
subtitle: Find your next adventure from 1,234 routes
breadcrumb:
  - title: Routes
---

<div class="routes-header">
  <a href="/create-route/" class="btn-primary">
    <span>‚ûï</span> Create Route
  </a>
</div>

<div class="filter-bar">
  <div class="search-box">
    <span>üîç</span>
    <input type="text" placeholder="Search routes...">
  </div>
  
  <div class="filter-dropdown">
    <button class="filter-btn">
      Distance <span>‚ñº</span>
    </button>
  </div>
  
  <div class="filter-dropdown">
    <button class="filter-btn">
      Difficulty <span>‚ñº</span>
    </button>
  </div>
  
  <div class="filter-dropdown">
    <button class="filter-btn">
      Surface <span>‚ñº</span>
    </button>
  </div>

  <div class="view-toggle">
    <button class="view-btn active" title="Grid view">‚öè</button>
    <button class="view-btn" title="Map view">üó∫Ô∏è</button>
  </div>
</div>

<div class="routes-grid">
  {% for i in range(1, 9) %}
  <div class="route-card">
    <div class="route-map-preview">
      <span class="route-difficulty difficulty-{{ ['easy', 'moderate', 'hard'][i % 3] }}">
        {{ ['Easy', 'Moderate', 'Hard'][i % 3] }}
      </span>
      Route Map Preview
    </div>
    <div class="route-info">
      <h3 class="route-title">{{ ['Pacific Coast Century', 'Mountain Loop Trail', 'City Sunrise Ride', 'Gravel Adventure Route', 'Valley Vista Loop', 'Canyon Climb Challenge', 'Riverside Path', 'Hill Repeat Circuit'][i-1] }}</h3>
      <div class="route-author">by {{ ['Sarah Chen', 'Mike Johnson', 'Emma Wilson', 'Alex Rodriguez', 'Chris Taylor', 'Lisa Park', 'Tom Davies', 'Amy Foster'][i-1] }}</div>
      
      <div class="route-stats">
        <div class="route-stat">
          <div class="route-stat-value">{{ [42.5, 28.3, 15.7, 65.2, 38.9, 52.1, 21.4, 33.6][i-1] }}</div>
          <div class="route-stat-label">miles</div>
        </div>
        <div class="route-stat">
          <div class="route-stat-value">{{ [1250, 3420, 450, 2100, 1680, 4200, 320, 2850][i-1] }}</div>
          <div class="route-stat-label">ft elevation</div>
        </div>
        <div class="route-stat">
          <div class="route-stat-value">{{ [2.5, 3.0, 1.0, 4.5, 2.0, 5.0, 1.5, 3.5][i-1] }}</div>
          <div class="route-stat-label">hours</div>
        </div>
      </div>

      <div class="route-tags">
        <span class="route-tag">{{ ['Road', 'MTB', 'Gravel', 'Mixed'][i % 4] }}</span>
        <span class="route-tag">{{ ['Scenic', 'Climbing', 'Fast', 'Technical'][i % 4] }}</span>
        {% if i % 3 == 0 %}
        <span class="route-tag">Popular</span>
        {% endif %}
      </div>

      <div class="route-actions">
        <div class="route-saves">
          <span>üíæ</span>
          <span>{{ [234, 156, 89, 412, 67, 523, 178, 291][i-1] }} saves</span>
        </div>
        <button class="save-btn">Save Route</button>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

<div class="load-more">
  <button class="btn-secondary">Load More Routes</button>
</div>

<script>
  // View toggle
  document.querySelectorAll('.view-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  // Save button interaction
  document.querySelectorAll('.save-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      btn.textContent = btn.textContent === 'Save Route' ? 'Saved ‚úì' : 'Save Route';
    });
  });

  // Route card click
  document.querySelectorAll('.route-card').forEach(card => {
    card.addEventListener('click', () => {
      window.location.href = '/route-details/1/';
    });
  });
</script>