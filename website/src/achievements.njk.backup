layout: dashboard.njk
title: Achievements
subtitle: Your cycling accomplishments
---

<style>
  .achievements-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .achievement-stats {
    display: flex;
    gap: 32px;
  }

  .achievement-stat {
    text-align: center;
  }

  .achievement-count {
    font-size: 32px;
    font-weight: bold;
    color: var(--accent);
  }

  .achievement-label {
    font-size: 14px;
    color: var(--text-secondary);
    margin-top: 4px;
  }

  .filter-tabs {
    display: flex;
    gap: 16px;
    margin-bottom: 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .filter-tab {
    padding: 12px 24px;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .filter-tab:hover {
    color: var(--text-primary);
  }

  .filter-tab.active {
    color: var(--accent);
  }

  .filter-tab.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent);
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .achievement-card {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 24px;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .achievement-card:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.05);
  }

  .achievement-card.locked {
    opacity: 0.6;
  }

  .achievement-card.locked::after {
    content: 'üîí';
    position: absolute;
    top: 12px;
    right: 12px;
    font-size: 20px;
  }

  .achievement-icon {
    width: 64px;
    height: 64px;
    background: rgba(88, 101, 242, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    margin-bottom: 16px;
  }

  .achievement-card.gold .achievement-icon {
    background: rgba(251, 191, 36, 0.2);
  }

  .achievement-card.silver .achievement-icon {
    background: rgba(156, 163, 175, 0.2);
  }

  .achievement-card.bronze .achievement-icon {
    background: rgba(217, 119, 6, 0.2);
  }

  .achievement-name {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .achievement-description {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
    line-height: 1.5;
  }

  .achievement-progress {
    margin-bottom: 8px;
  }

  .progress-bar {
    height: 6px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--accent);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .achievement-card.gold .progress-fill {
    background: #fbbf24;
  }

  .achievement-card.silver .progress-fill {
    background: #9ca3af;
  }

  .achievement-card.bronze .progress-fill {
    background: #d97706;
  }

  .progress-text {
    font-size: 12px;
    color: var(--text-secondary);
    margin-top: 4px;
  }

  .achievement-date {
    font-size: 12px;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .achievement-rarity {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(88, 101, 242, 0.1);
    color: var(--accent);
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
  }

  .achievement-details {
    background: var(--bg-secondary);
    border-radius: 12px;
    padding: 32px;
    margin-bottom: 32px;
    display: none;
  }

  .details-header {
    display: flex;
    gap: 24px;
    margin-bottom: 24px;
  }

  .details-icon {
    width: 120px;
    height: 120px;
    background: rgba(88, 101, 242, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 64px;
  }

  .details-info {
    flex: 1;
  }

  .details-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .details-subtitle {
    font-size: 16px;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }

  .details-stats {
    display: flex;
    gap: 32px;
  }

  .detail-stat {
    display: flex;
    flex-direction: column;
  }

  .detail-value {
    font-size: 20px;
    font-weight: bold;
    color: var(--accent);
  }

  .detail-label {
    font-size: 12px;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .achievements-header {
      flex-direction: column;
      gap: 16px;
    }

    .achievement-stats {
      width: 100%;
      justify-content: space-around;
    }

    .filter-tabs {
      overflow-x: auto;
      white-space: nowrap;
    }

    .achievements-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

