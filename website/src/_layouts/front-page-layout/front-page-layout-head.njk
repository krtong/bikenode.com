<!-- Self-contained CSS for front-page-layout -->
<link rel="stylesheet" href="/_layouts/front-page-layout/front-page-layout.css">
<link rel="stylesheet" href="/_layouts/front-page-layout/front-page-layout-header.css">
<link rel="stylesheet" href="/_layouts/front-page-layout/front-page-layout-footer.css">

{# Load custom CSS specified in page front matter #}
{% if customCSS %}
  {% for stylesheet in customCSS %}
  <link rel="stylesheet" href="{{ stylesheet }}">
  {% endfor %}
{% endif %}