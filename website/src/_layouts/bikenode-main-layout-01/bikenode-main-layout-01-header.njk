{# BikeNode Main Layout 01 - Header Component #}
{# Self-contained header with no external dependencies #}

<header class="bikenode-main-layout-01-header">
    <div class="bikenode-main-layout-01-header-container">
        <!-- Logo and brand -->
        <div class="bikenode-main-layout-01-header-brand">
            <a href="/" class="bikenode-main-layout-01-header-brand-link">
                <img src="/_layouts/bikenode-main-layout-01/bikenode_logo.png" alt="BikeNode" class="bikenode-main-layout-01-header-brand-logo">
            </a>
        </div>
        
        <!-- Main navigation -->
        <nav class="bikenode-main-layout-01-header-nav" aria-label="Main navigation">
            <a href="/bikes/bikes-my-garage/" class="bikenode-main-layout-01-header-nav-link{% if page.url and page.url.includes('/bikes') %} bikenode-main-layout-01-header-nav-link-active{% endif %}">
                <span class="bikenode-main-layout-01-header-nav-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="5.5" cy="17.5" r="3.5"></circle>
                        <circle cx="18.5" cy="17.5" r="3.5"></circle>
                        <path d="M12 17.5V14l-3-3 4-3 2 3h2"></path>
                    </svg>
                </span>
                <span class="bikenode-main-layout-01-header-nav-text">My Bikes</span>
            </a>
            
            <a href="/rides/rides-my-dashboard/" class="bikenode-main-layout-01-header-nav-link{% if page.url and page.url.includes('/rides') %} bikenode-main-layout-01-header-nav-link-active{% endif %}">
                <span class="bikenode-main-layout-01-header-nav-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                </span>
                <span class="bikenode-main-layout-01-header-nav-text">Rides & Routes</span>
            </a>
            
            <a href="/community/community-forums-list/" class="bikenode-main-layout-01-header-nav-link{% if page.url and page.url.includes('/community') %} bikenode-main-layout-01-header-nav-link-active{% endif %}">
                <span class="bikenode-main-layout-01-header-nav-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </span>
                <span class="bikenode-main-layout-01-header-nav-text">Community</span>
            </a>
            
            <a href="/settings/settings-account-page/" class="bikenode-main-layout-01-header-nav-link{% if page.url and page.url.includes('/settings') %} bikenode-main-layout-01-header-nav-link-active{% endif %}">
                <span class="bikenode-main-layout-01-header-nav-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M12 1v6m0 6v6m11-11h-6m-6 0H1M20.5 7.5L16 12l4.5 4.5M3.5 7.5L8 12l-4.5 4.5M16.5 3.5L12 8l-4.5-4.5M16.5 20.5L12 16l-4.5 4.5"></path>
                    </svg>
                </span>
                <span class="bikenode-main-layout-01-header-nav-text">Settings</span>
            </a>
            
            <a href="/marketplace/marketplace-browse-listings/" class="bikenode-main-layout-01-header-nav-link{% if page.url and page.url.includes('/marketplace') %} bikenode-main-layout-01-header-nav-link-active{% endif %}">
                <span class="bikenode-main-layout-01-header-nav-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                </span>
                <span class="bikenode-main-layout-01-header-nav-text">Marketplace</span>
            </a>
            
            <a href="/events/" class="bikenode-main-layout-01-header-nav-link{% if page.url and page.url.includes('/events') %} bikenode-main-layout-01-header-nav-link-active{% endif %}">
                <span class="bikenode-main-layout-01-header-nav-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                </span>
                <span class="bikenode-main-layout-01-header-nav-text">Events</span>
            </a>
        </nav>
        
        <!-- User actions -->
        <div class="bikenode-main-layout-01-header-actions">
            <!-- Get started button for logged out users -->
            <a href="/authentication/auth-signup-page/" class="bikenode-main-layout-01-header-get-started-button">Get Started</a>
            
            <!-- Search bar -->
            <div class="bikenode-main-layout-01-header-search">
                <form action="/search/" method="get" class="bikenode-main-layout-01-header-search-form">
                    <input type="search" name="q" placeholder="Search bikes, routes, users..." class="bikenode-main-layout-01-header-search-input" aria-label="Search">
                    <button type="submit" class="bikenode-main-layout-01-header-search-button" aria-label="Submit search">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Mobile menu button -->
        <button class="bikenode-main-layout-01-header-mobile-menu-button" aria-label="Toggle menu" aria-expanded="false">
            <span class="bikenode-main-layout-01-header-menu-icon">
                <span></span>
                <span></span>
                <span></span>
            </span>
        </button>
    </div>
    
    <!-- Mobile navigation -->
    <div class="bikenode-main-layout-01-header-mobile-nav" hidden>
        <form action="/search/" method="get" class="bikenode-main-layout-01-header-mobile-search">
            <input type="search" name="q" placeholder="Search..." class="bikenode-main-layout-01-header-mobile-search-input" aria-label="Search">
        </form>
        
        <nav class="bikenode-main-layout-01-header-mobile-nav-links">
            <a href="/marketplace/marketplace-browse-listings/" class="bikenode-main-layout-01-header-mobile-nav-link">Marketplace</a>
            <a href="/rides/rides-browse-gallery/" class="bikenode-main-layout-01-header-mobile-nav-link">Routes</a>
            <a href="/community/community-browse-directory/" class="bikenode-main-layout-01-header-mobile-nav-link">Communities</a>
            <a href="/events/" class="bikenode-main-layout-01-header-mobile-nav-link">Events</a>
            <a href="/dashboard-overview/dashboard-home-page/" class="bikenode-main-layout-01-header-mobile-nav-link">Dashboard</a>
            <a href="/profile/profile-my-page/" class="bikenode-main-layout-01-header-mobile-nav-link">Profile</a>
            <a href="/settings/settings-account-page/" class="bikenode-main-layout-01-header-mobile-nav-link">Settings</a>
        </nav>
    </div>
</header>