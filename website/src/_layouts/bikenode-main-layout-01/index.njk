<!DOCTYPE html>
<html lang="en">
<head>
    {% include "./bikenode-main-layout-01-head.njk" %}
</head>
<body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
    <!-- Background Animation Canvas -->
    <canvas id="bikenode-main-layout-01-background-canvas"></canvas>
    
    {% include "./bikenode-main-layout-01-header.njk" %}
    
    <!-- Main Layout Container -->
    <div class="bikenode-main-layout-01-layout {% if layoutTheme %}layout-theme-{{ layoutTheme }}{% else %}layout-theme-glass{% endif %}">
        {% include "./bikenode-main-layout-01-sidebar.njk" %}
        
        <!-- Main Content -->
        <main class="bikenode-main-layout-01-content">
            {% if showContentHeader !== false %}
            <div class="bikenode-main-layout-01-content-header">
                {% if breadcrumb %}
                <div class="bikenode-main-layout-01-breadcrumb">
                    {% for crumb in breadcrumb %}
                    {% if crumb.url %}<a href="{{ crumb.url }}">{{ crumb.title }}</a>{% else %}{{ crumb.title }}{% endif %}
                    {% if not loop.last %}<span class="separator">â€º</span>{% endif %}
                    {% endfor %}
                </div>
                {% endif %}
                <h1>{{ title or 'Dashboard' }}</h1>
                {% if subtitle %}
                <p class="bikenode-main-layout-01-content-subtitle">{{ subtitle }}</p>
                {% endif %}
            </div>
            {% endif %}
            
            {{ content | safe }}
        </main>
    </div>
    
    {% include "./bikenode-main-layout-01-footer.njk" %}
    
    <script src="./bikenode-main-layout-01-background-animation.js"></script>
    <script src="./bikenode-main-layout-01-sidebar.js"></script>
    <script src="./bikenode-main-layout-01-header.js"></script>
    {% if customJS %}
    {% for script in customJS %}
    <script src="{{ script }}"></script>
    {% endfor %}
    {% endif %}
    {% if inlineJS %}
    <script>
    {{ inlineJS | safe }}
    </script>
    {% endif %}
</body>
</html>