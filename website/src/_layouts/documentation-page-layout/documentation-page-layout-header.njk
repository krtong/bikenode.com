<header class="documentation-page-layout-header">
  <div class="documentation-page-layout-header-container">
    <!-- Logo and Title -->
    <div class="documentation-page-layout-header-brand">
      <a href="/" class="documentation-page-layout-header-logo-link">
        <img src="/_layouts/documentation-page-layout/bikenode_logo.png" alt="BikeNode" class="documentation-page-layout-header-logo-img">
        <span class="documentation-page-layout-header-site-name">BikeNode</span>
      </a>
      <span class="documentation-page-layout-header-divider">/</span>
      <span class="documentation-page-layout-header-section">Documentation</span>
    </div>

    <!-- Search Bar -->
    <div class="documentation-page-layout-header-search">
      <form class="documentation-page-layout-header-search-form" action="/documentation/search" method="get">
        <input 
          type="search" 
          name="q" 
          class="documentation-page-layout-header-search-input" 
          placeholder="Search documentation..."
          aria-label="Search documentation"
        >
        <button type="submit" class="documentation-page-layout-header-search-button" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="9" cy="9" r="7" stroke="currentColor" stroke-width="2"/>
            <line x1="14.5" y1="14.5" x2="18.5" y2="18.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
      </form>
    </div>

    <!-- Main Site Link -->
    <div class="documentation-page-layout-header-actions">
      <a href="/" class="documentation-page-layout-header-main-link">
        Back to Main Site
      </a>
    </div>
  </div>
</header>