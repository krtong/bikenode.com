---
layout: base.njk
customCSS:
  - "/assets/css/auth.css"
---

<!-- Auth Container -->
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <a href="/" class="logo-link">
                <img src="/assets/images/bikenode_logo.png" alt="BikeNode" class="auth-logo">
            </a>
            <h1>{{ authTitle or title }}</h1>
            <p>{{ authSubtitle or subtitle }}</p>
        </div>

        {{ content | safe }}

        <div class="auth-footer">
            <p>{{ footerText | safe }}</p>
            <div class="auth-links">
                <a href="/terms/">Terms</a>
                <a href="/privacy/">Privacy</a>
                <a href="/support/">Help</a>
            </div>
        </div>
    </div>
</div>