<div class="gear-my-collection-header">
    <div class="gear-my-collection-header-content">
        <h1 class="gear-my-collection-title">{{ title }}</h1>
        <p class="gear-my-collection-subtitle">{{ subtitle }}</p>
    </div>
    <div class="gear-my-collection-header-actions">
        <button class="gear-my-collection-btn gear-my-collection-btn-secondary" id="gear-my-collection-import">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Import
        </button>
        <button class="gear-my-collection-btn gear-my-collection-btn-primary" id="gear-my-collection-add-gear">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            Add Gear
        </button>
    </div>
</div>