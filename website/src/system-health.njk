<style>
.health-status {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
}

.status-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
}

.overall-status {
    display: flex;
    align-items: center;
    gap: 12px;
}

.status-light {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    position: relative;
}

.status-light.healthy {
    background: #10b981;
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.5);
}

.status-light.degraded {
    background: #f59e0b;
    box-shadow: 0 0 20px rgba(245, 158, 11, 0.5);
}

.status-light.critical {
    background: #ef4444;
    box-shadow: 0 0 20px rgba(239, 68, 68, 0.5);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

.status-text {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
}

.status-description {
    color: var(--text-secondary);
    margin-left: auto;
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
}

.metric-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    padding: 20px;
    text-align: center;
}

.metric-value {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 8px 0;
}

.metric-label {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.metric-trend {
    font-size: 0.85rem;
    margin-top: 8px;
}

.trend-positive { color: #10b981; }
.trend-negative { color: #ef4444; }

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
}

.service-card {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 20px;
}

.service-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.service-name {
    font-weight: 600;
    color: var(--text-primary);
}

.service-status {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.8rem;
}

.status-operational {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.status-degraded {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}

.status-down {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.service-metrics {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
}

.service-metric {
    text-align: center;
    padding: 12px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 6px;
}

.metric-sm-value {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
}

.metric-sm-label {
    font-size: 0.8rem;
    color: var(--text-secondary);
}

.performance-chart {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.chart-container {
    height: 300px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    position: relative;
    overflow: hidden;
}

.chart-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60%;
    background: linear-gradient(to top, rgba(88, 101, 242, 0.1), rgba(88, 101, 242, 0.3));
    border-top: 2px solid var(--accent);
}

.incident-log {
    background: var(--card-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
}

.incident-header {
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.incident-item {
    padding: 16px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    gap: 16px;
}

.incident-severity {
    width: 4px;
    height: 40px;
    border-radius: 2px;
}

.severity-critical { background: #ef4444; }
.severity-major { background: #f59e0b; }
.severity-minor { background: #3b82f6; }

.incident-details {
    flex: 1;
}

.incident-title {
    color: var(--text-primary);
    font-weight: 500;
    margin: 0 0 4px 0;
}

.incident-meta {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.incident-status {
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.8rem;
}

.status-resolved {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.status-investigating {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}
</style>

