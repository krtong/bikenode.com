<!-- Right Display Panel -->
<div class="display-panel">
    <div class="breadcrumb" id="breadcrumb">
        <span class="breadcrumb-item">Add Bike</span>
    </div>

    <div class="vehicle-display">
        <div class="vehicle-icon" id="vehicle-icon">ðŸš—</div>
        <div class="vehicle-name" id="vehicle-name">Select Vehicle</div>
        <div class="vehicle-description" id="vehicle-description">Choose a vehicle type from the menu to begin your selection</div>
    </div>

    <!-- Include specs panel -->
    {% include "./specs-panel.njk" %}
    
    <!-- Submit Specs Modal -->
    <div class="modal-overlay" id="submit-specs-modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Submit Specifications URL</h3>
                <button class="modal-close" onclick="closeSubmitSpecsModal()">âœ•</button>
            </div>
            <div class="modal-body">
                <p class="modal-description">
                    Help us improve our database by submitting a URL to the specifications for this bike.
                </p>
                <form id="submit-specs-form" onsubmit="submitSpecsURL(event)">
                    <div class="form-group">
                        <label for="specs-url">Specifications URL:</label>
                        <input 
                            type="url" 
                            id="specs-url" 
                            name="url" 
                            placeholder="https://example.com/bike-specs"
                            required
                            class="form-input"
                        >
                    </div>
                    <div class="form-group">
                        <label for="specs-notes">Additional Notes (optional):</label>
                        <textarea 
                            id="specs-notes" 
                            name="notes" 
                            placeholder="Any additional information about these specs..."
                            rows="3"
                            class="form-input"
                        ></textarea>
                    </div>
                    <div class="form-actions">
                        <button type="button" class="btn-secondary" onclick="closeSubmitSpecsModal()">Cancel</button>
                        <button type="submit" class="btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>