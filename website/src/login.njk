<script>
// Mock login functionality for UI prototyping
document.getElementById('loginForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const submitBtn = document.querySelector('.auth-submit');
    const originalText = submitBtn.textContent;
    
    // Show loading state
    submitBtn.textContent = 'Signing in...';
    submitBtn.disabled = true;
    
    // Simulate login delay
    setTimeout(() => {
        // Redirect to dashboard
        window.location.href = '/dashboard/';
    }, 1500);
});

document.getElementById('discordLogin').addEventListener('click', function() {
    const originalText = this.innerHTML;
    this.innerHTML = '<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none" stroke-dasharray="31.416" stroke-dashoffset="31.416" class="spinner"/></svg>Connecting...';
    this.disabled = true;
    
    // Simulate Discord OAuth
    setTimeout(() => {
        window.location.href = '/dashboard/';
    }, 2000);
});

