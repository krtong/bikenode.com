---
layout: bikenode-main-layout-01
title: Account Settings
subtitle: Manage your profile, security, and preferences
customCSS:
  - ./styles/settings-account-page.css
---

<script type="module" src="./js/settings-account-page.js"></script>

<div class="settings-account-page-content">
    <!-- Settings Tabs -->
    <div class="settings-account-page-tabs">
        <button class="settings-account-page-tab-btn settings-account-page-active" data-tab="profile">Profile</button>
        <button class="settings-account-page-tab-btn" data-tab="security">Security</button>
        <button class="settings-account-page-tab-btn" data-tab="privacy">Privacy</button>
        <button class="settings-account-page-tab-btn" data-tab="connected">Connected Services</button>
        <button class="settings-account-page-tab-btn" data-tab="preferences">Preferences</button>
    </div>

    <!-- Profile Tab -->
    <div class="settings-account-page-tab-content settings-account-page-active" id="settings-account-page-profile">
        <div class="settings-account-page-section">
            <h2>Profile Information</h2>
            <div class="settings-account-page-profile-header">
                <div class="settings-account-page-profile-avatar">
                    <img src="/assets/images/bikenode_logo.png" alt="Profile Avatar">
                    <button class="settings-account-page-avatar-upload">üì∑</button>
                </div>
                <div class="settings-account-page-profile-info">
                    <h3>RiderName</h3>
                    <p>Member since March 2024</p>
                    <p>47 Community Points ‚Ä¢ 8 Achievements</p>
                </div>
            </div>
            
            <form class="settings-account-page-form">
                <div class="settings-account-page-form-grid">
                    <div class="settings-account-page-form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" id="firstName" value="John" required>
                    </div>
                    <div class="settings-account-page-form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" id="lastName" value="Rider" required>
                    </div>
                </div>
                
                <div class="settings-account-page-form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" value="RiderName" required>
                    <small>Your username is visible to other community members</small>
                </div>
                
                <div class="settings-account-page-form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" value="rider@example.com" required>
                    <small>Used for account notifications and security alerts</small>
                </div>
                
                <div class="settings-account-page-form-group">
                    <label for="bio">Bio</label>
                    <textarea id="bio" rows="4" placeholder="Tell the community about yourself and your riding passion...">Passionate motorcycle enthusiast with 10+ years of riding experience. Love exploring scenic routes and connecting with fellow riders in the community.</textarea>
                </div>
                
                <div class="settings-account-page-form-group">
                    <label for="location">Location</label>
                    <input type="text" id="location" value="San Francisco, CA" placeholder="City, State/Country">
                    <small>Help others find local riding partners</small>
                </div>
                
                <button type="submit" class="settings-account-page-button settings-account-page-button-primary">Save Profile</button>
            </form>
        </div>
    </div>

    <!-- Security Tab -->
    <div class="settings-account-page-tab-content" id="settings-account-page-security">
        <div class="settings-account-page-section">
            <h2>Password & Security</h2>
            
            <form class="settings-account-page-form">
                <div class="settings-account-page-form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" id="currentPassword" placeholder="Enter your current password">
                </div>
                
                <div class="settings-account-page-form-grid">
                    <div class="settings-account-page-form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" id="newPassword" placeholder="Enter new password">
                    </div>
                    <div class="settings-account-page-form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" placeholder="Confirm new password">
                    </div>
                </div>
                
                <button type="submit" class="settings-account-page-button settings-account-page-button-primary">Update Password</button>
            </form>
        </div>
        
        <div class="settings-account-page-section">
            <h2>Two-Factor Authentication</h2>
            <div class="settings-account-page-security-option">
                <div class="settings-account-page-option-info">
                    <h3>App-based Authentication</h3>
                    <p>Use an authenticator app for an extra layer of security</p>
                </div>
                <div class="settings-account-page-option-action">
                    <span class="settings-account-page-security-status settings-account-page-disabled">Disabled</span>
                    <button class="settings-account-page-button settings-account-page-button-secondary">Enable 2FA</button>
                </div>
            </div>
        </div>
        
        <div class="settings-account-page-section">
            <h2>Login Sessions</h2>
            <div class="settings-account-page-session-list">
                <div class="settings-account-page-session-item">
                    <div class="settings-account-page-session-info">
                        <h4>Current Session</h4>
                        <p>Chrome on macOS ‚Ä¢ San Francisco, CA</p>
                        <small>Active now</small>
                    </div>
                    <span class="settings-account-page-session-current">Current</span>
                </div>
                <div class="settings-account-page-session-item">
                    <div class="settings-account-page-session-info">
                        <h4>Mobile App</h4>
                        <p>BikeNode iOS ‚Ä¢ Last active 2 hours ago</p>
                        <small>iPhone 14 Pro</small>
                    </div>
                    <button class="settings-account-page-button settings-account-page-button-danger settings-account-page-btn-small">Revoke</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Privacy Tab -->
    <div class="settings-account-page-tab-content" id="settings-account-page-privacy">
        <div class="settings-account-page-section">
            <h2>Profile Visibility</h2>
            
            <div class="settings-account-page-privacy-option">
                <div class="settings-account-page-option-info">
                    <h3>Profile Visibility</h3>
                    <p>Control who can see your profile information</p>
                </div>
                <select class="settings-account-page-privacy-select">
                    <option value="public">Public - Anyone can view</option>
                    <option value="community" selected>Community Members Only</option>
                    <option value="private">Private - Only you</option>
                </select>
            </div>
            
            <div class="settings-account-page-privacy-option">
                <div class="settings-account-page-option-info">
                    <h3>Virtual Garage</h3>
                    <p>Who can see your bikes and garage</p>
                </div>
                <select class="settings-account-page-privacy-select">
                    <option value="public" selected>Public - Anyone can view</option>
                    <option value="community">Community Members Only</option>
                    <option value="private">Private - Only you</option>
                </select>
            </div>
            
            <div class="settings-account-page-privacy-option">
                <div class="settings-account-page-option-info">
                    <h3>Activity Status</h3>
                    <p>Show when you're online to other members</p>
                </div>
                <label class="settings-account-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-account-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-account-page-privacy-option">
                <div class="settings-account-page-option-info">
                    <h3>Direct Messages</h3>
                    <p>Allow community members to send you messages</p>
                </div>
                <label class="settings-account-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-account-page-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <!-- Connected Services Tab -->
    <div class="settings-account-page-tab-content" id="settings-account-page-connected">
        <div class="settings-account-page-section">
            <h2>Connected Services</h2>
            
            <div class="settings-account-page-service-item">
                <div class="settings-account-page-service-icon">
