title: Notification Settings
subtitle: Manage how and when you receive notifications from BikeNode
---

<link rel="stylesheet" href="./styles/settings-notifications-page.css">

<div class="settings-notifications-page-content">
    <!-- Email Notifications -->
    <div class="settings-notifications-page-section">
        <h2>Email Notifications</h2>
        <p class="settings-notifications-page-section-description">Control which email notifications you receive</p>
        
        <div class="settings-notifications-page-group">
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Community Invitations</h3>
                    <p>Get notified when you're invited to new communities</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Weekly Digest</h3>
                    <p>Summary of community activity and updates</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Product Updates</h3>
                    <p>New features and important platform updates</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox">
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Security Alerts</h3>
                    <p>Important security notifications about your account</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox" checked disabled>
                    <span class="settings-notifications-page-slider"></span>
                </label>
                <small class="settings-notifications-page-required-notice">Required for security</small>
            </div>
        </div>
    </div>

    <!-- Discord Notifications -->
    <div class="settings-notifications-page-section">
        <h2>Discord Notifications</h2>
        <p class="settings-notifications-page-section-description">Manage Discord-specific notification preferences</p>
        
        <div class="settings-notifications-page-group">
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Bot Mentions</h3>
                    <p>When BikeNode bot mentions you or responds to your commands</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Community Alerts</h3>
                    <p>Moderation alerts and community management notifications</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Event Reminders</h3>
                    <p>Upcoming community events and ride meetups</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox">
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Garage Activity</h3>
                    <p>When someone likes or comments on your bikes</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox" checked>
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <!-- Mobile Notifications -->
    <div class="settings-notifications-page-section">
        <h2>Mobile Notifications</h2>
        <p class="settings-notifications-page-section-description">Push notifications for the BikeNode mobile app</p>
        
        <div class="settings-notifications-page-group">
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Push Notifications</h3>
                    <p>Enable push notifications on your mobile device</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox">
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Location-Based</h3>
                    <p>Notifications about nearby events and communities</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox">
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
            
            <div class="settings-notifications-page-item">
                <div class="settings-notifications-page-info">
                    <h3>Daily Summary</h3>
                    <p>Daily digest of community activity</p>
                </div>
                <label class="settings-notifications-page-toggle-switch">
                    <input type="checkbox">
                    <span class="settings-notifications-page-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <!-- Delivery Preferences -->
    <div class="settings-notifications-page-section">
        <h2>Delivery Preferences</h2>
        <p class="settings-notifications-page-section-description">How you want to receive notifications</p>
        
        <div class="settings-notifications-page-preference-grid">
            <div class="settings-notifications-page-preference-item">
                <h3>Email Frequency</h3>
                <select class="settings-notifications-page-preference-select">
                    <option value="immediate">Immediate</option>
                    <option value="daily" selected>Daily digest</option>
                    <option value="weekly">Weekly digest</option>
                    <option value="never">Never</option>
                </select>
            </div>
            
            <div class="settings-notifications-page-preference-item">
                <h3>Quiet Hours</h3>
                <div class="settings-notifications-page-time-range">
                    <input type="time" value="22:00" class="settings-notifications-page-time-input">
                    <span>to</span>
                    <input type="time" value="08:00" class="settings-notifications-page-time-input">
                </div>
                <small>No notifications during these hours</small>
            </div>
            
            <div class="settings-notifications-page-preference-item">
                <h3>Time Zone</h3>
                <select class="settings-notifications-page-preference-select">
                    <option value="PST" selected>Pacific Standard Time</option>
                    <option value="EST">Eastern Standard Time</option>
                    <option value="CST">Central Standard Time</option>
                    <option value="MST">Mountain Standard Time</option>
                    <option value="GMT">Greenwich Mean Time</option>
                </select>
            </div>
            
            <div class="settings-notifications-page-preference-item">
                <h3>Language</h3>
                <select class="settings-notifications-page-preference-select">
                    <option value="en" selected>English</option>
                    <option value="es">Español</option>
                    <option value="fr">Français</option>
                    <option value="de">Deutsch</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Save Button -->
    <div class="settings-notifications-page-save-section">
        <button class="settings-notifications-page-btn-primary settings-notifications-page-save-btn">Save Notification Settings</button>
        <button class="settings-notifications-page-btn-secondary">Reset to Defaults</button>
    </div>
</div>
