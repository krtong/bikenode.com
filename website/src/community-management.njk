<script>
function switchView(view) {
    const gridView = document.getElementById('communities-grid');
    const listView = document.getElementById('communities-list');
    const buttons = document.querySelectorAll('.view-btn');
    
    buttons.forEach(btn => btn.classList.remove('active'));
    document.querySelector(`[data-view="${view}"]`).classList.add('active');
    
    if (view === 'grid') {
        gridView.parentElement.style.display = 'block';
        listView.style.display = 'none';
    } else {
        gridView.parentElement.style.display = 'none';
        listView.style.display = 'block';
    }
}

function createCommunity() {
    window.location.href = '/community-create/';
}

function manageCommunity(communityId) {
    window.location.href = `/community/${communityId}/manage/`;
}

function viewCommunity(communityId) {
    window.location.href = `/community/${communityId}/`;
}

function viewAnalytics(communityId) {
    alert(`Opening analytics for ${communityId}`);
}

function moderateCommunity(communityId) {
    alert(`Opening moderation tools for ${communityId}`);
}

function bulkActions() {
    alert('Opening bulk actions menu');
}

function exportData() {
    alert('Exporting community data');
}

function clearFilters() {
    document.getElementById('role-filter').value = '';
    document.getElementById('status-filter').value = '';
    document.getElementById('category-filter').value = '';
}
</script>