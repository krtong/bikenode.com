<section class="profile-section">
  <div class="section-header">
    <h2 class="section-title">Cycling Profile</h2>
    <p class="section-description">Help others understand your riding style and interests</p>
  </div>
  
  <div class="form-grid">
    <div class="form-group">
      <label for="ridingStyle">Primary Riding Style</label>
      <select id="ridingStyle" name="ridingStyle">
        <option value="">Select style</option>
        <option value="road" selected>Road Cycling</option>
        <option value="mountain">Mountain Biking</option>
        <option value="gravel">Gravel</option>
        <option value="track">Track</option>
        <option value="commuting">Commuting</option>
        <option value="touring">Touring</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="experience">Experience Level</label>
      <select id="experience" name="experience">
        <option value="">Select level</option>
        <option value="beginner">Beginner (0-2 years)</option>
        <option value="intermediate">Intermediate (2-5 years)</option>
        <option value="advanced" selected>Advanced (5+ years)</option>
        <option value="expert">Expert/Pro</option>
      </select>
    </div>
    
    <div class="form-group full-width">
      <label>Interests & Disciplines</label>
      <div class="checkbox-grid">
        <label class="checkbox-item">
          <input type="checkbox" name="interests" value="racing" checked>
          <span class="checkbox-label">Racing</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="interests" value="track-days" checked>
          <span class="checkbox-label">Track Days</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="interests" value="touring">
          <span class="checkbox-label">Touring</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="interests" value="maintenance" checked>
          <span class="checkbox-label">Bike Maintenance</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="interests" value="fitness">
          <span class="checkbox-label">Fitness</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="interests" value="social">
          <span class="checkbox-label">Social Rides</span>
        </label>
      </div>
    </div>
  </div>
</section>