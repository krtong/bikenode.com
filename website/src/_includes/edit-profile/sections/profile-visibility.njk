<section class="profile-section">
  <div class="section-header">
    <h2 class="section-title">Profile Visibility</h2>
    <p class="section-description">Control who can see your profile and activities</p>
  </div>
  
  <div class="privacy-settings">
    <div class="privacy-item">
      <div class="privacy-info">
        <h3>Profile Visibility</h3>
        <p>Who can view your profile page</p>
      </div>
      <select class="privacy-select" name="profile_visibility">
        <option value="public" selected>Everyone</option>
        <option value="followers">Followers Only</option>
        <option value="private">Only Me</option>
      </select>
    </div>
    
    <div class="privacy-item">
      <div class="privacy-info">
        <h3>Activity Feed</h3>
        <p>Who can see your rides and activities</p>
      </div>
      <select class="privacy-select" name="activity_visibility">
        <option value="public">Everyone</option>
        <option value="followers" selected>Followers Only</option>
        <option value="private">Only Me</option>
      </select>
    </div>
    
    <div class="privacy-item">
      <div class="privacy-info">
        <h3>Bike Collection</h3>
        <p>Who can view your bikes</p>
      </div>
      <select class="privacy-select" name="bikes_visibility">
        <option value="public" selected>Everyone</option>
        <option value="followers">Followers Only</option>
        <option value="private">Only Me</option>
      </select>
    </div>
  </div>
</section>