<section class="profile-section">
  <div class="section-header">
    <h2 class="section-title">Account Information</h2>
    <p class="section-description">Manage your account details and security settings</p>
  </div>
  
  <div class="form-grid">
    <div class="form-group">
      <label for="email">Email Address</label>
      <input type="email" id="email" name="email" value="kevin@example.com" required>
      <span class="field-help">Used for login and notifications</span>
    </div>
    
    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input type="tel" id="phone" name="phone" placeholder="+1 (555) 123-4567">
      <span class="field-help">Optional - for account recovery</span>
    </div>
    
    <div class="form-group">
      <label for="timezone">Timezone</label>
      <select id="timezone" name="timezone">
        <option value="America/Los_Angeles" selected>Pacific Time (PT)</option>
        <option value="America/Denver">Mountain Time (MT)</option>
        <option value="America/Chicago">Central Time (CT)</option>
        <option value="America/New_York">Eastern Time (ET)</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="language">Language</label>
      <select id="language" name="language">
        <option value="en" selected>English</option>
        <option value="es">Español</option>
        <option value="fr">Français</option>
        <option value="de">Deutsch</option>
      </select>
    </div>
  </div>
</section>