<section class="profile-section">
  <div class="section-header">
    <h2 class="section-title">Activity Privacy</h2>
    <p class="section-description">Additional privacy options for your activities</p>
  </div>
  
  <div class="preferences-list">
    <label class="preference-item">
      <div class="preference-info">
        <h3>Hide Start/End Points</h3>
        <p>Obscure the first and last 500m of your routes</p>
      </div>
      <div class="toggle-switch">
        <input type="checkbox" name="hide_endpoints">
        <span class="toggle-slider"></span>
      </div>
    </label>
    
    <label class="preference-item">
      <div class="preference-info">
        <h3>Hide from Heatmaps</h3>
        <p>Don't include your activities in public heatmaps</p>
      </div>
      <div class="toggle-switch">
        <input type="checkbox" name="hide_heatmaps">
        <span class="toggle-slider"></span>
      </div>
    </label>
  </div>
</section>