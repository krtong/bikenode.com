<section class="profile-section">
  <div class="section-header">
    <h2 class="section-title">Profile Media</h2>
    <p class="section-description">Customize how your profile appears to others</p>
  </div>
  
  <div class="media-grid">
    <!-- Avatar Upload -->
    <div class="media-item">
      <h3 class="media-title">Profile Picture</h3>
      <div class="avatar-upload-container">
        <div class="avatar-preview" id="avatarPreview">
          <img src="/assets/images/nerd_blank_profile.png" alt="Profile" id="currentAvatar">
          <div class="avatar-overlay">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M12 4C7 4 2.73 7.11 1 11.5C2.73 15.89 7 19 12 19C17 19 21.27 15.89 23 11.5C21.27 7.11 17 4 12 4ZM12 16.5C9.24 16.5 7 14.26 7 11.5C7 8.74 9.24 6.5 12 6.5C14.76 6.5 17 8.74 17 11.5C17 14.26 14.76 16.5 12 16.5ZM12 8.5C10.34 8.5 9 9.84 9 11.5C9 13.16 10.34 14.5 12 14.5C13.66 14.5 15 13.16 15 11.5C15 9.84 13.66 8.5 12 8.5Z" fill="white"/>
            </svg>
          </div>
        </div>
        <input type="file" id="avatarInput" accept="image/*" style="display: none;">
        <div class="media-actions">
          <button type="button" class="btn btn-sm btn-primary" onclick="document.getElementById('avatarInput').click()">
            Upload Photo
          </button>
          <button type="button" class="btn btn-sm btn-ghost" onclick="removeAvatar()">
            Remove
          </button>
        </div>
        <p class="media-help">Recommended: 400x400px, max 5MB</p>
      </div>
    </div>

    <!-- Banner Upload -->
    <div class="media-item banner">
      <h3 class="media-title">Profile Banner</h3>
      <div class="banner-upload-container">
        <div class="banner-preview" id="bannerPreview">
          <img src="/assets/images/profile-banner.jpg" alt="Banner" id="currentBanner">
          <div class="banner-overlay">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M21 16V8C21 7.45 20.55 7 20 7H4C3.45 7 3 7.45 3 8V16C3 16.55 3.45 17 4 17H20C20.55 17 21 16.55 21 16ZM8.5 12.5L11 15.51L14.5 11L19 17H5L8.5 12.5Z" fill="white"/>
            </svg>
          </div>
        </div>
        <input type="file" id="bannerInput" accept="image/*" style="display: none;">
        <div class="media-actions">
          <button type="button" class="btn btn-sm btn-secondary" onclick="document.getElementById('bannerInput').click()">
            Change Banner
          </button>
          <button type="button" class="btn btn-sm btn-ghost" onclick="removeBanner()">
            Remove
          </button>
        </div>
        <p class="media-help">Recommended: 1200x400px, max 10MB</p>
      </div>
    </div>
  </div>
</section>