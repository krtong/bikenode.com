<section class="profile-section">
  <div class="section-header">
    <h2 class="section-title">Email Notifications</h2>
    <p class="section-description">Choose what emails you want to receive</p>
  </div>
  
  <div class="preferences-list">
    <label class="preference-item">
      <div class="preference-info">
        <h3>Activity Updates</h3>
        <p>Comments, kudos, and mentions on your activities</p>
      </div>
      <div class="toggle-switch">
        <input type="checkbox" name="notif_activity" checked>
        <span class="toggle-slider"></span>
      </div>
    </label>
    
    <label class="preference-item">
      <div class="preference-info">
        <h3>New Followers</h3>
        <p>When someone starts following you</p>
      </div>
      <div class="toggle-switch">
        <input type="checkbox" name="notif_followers" checked>
        <span class="toggle-slider"></span>
      </div>
    </label>
    
    <label class="preference-item">
      <div class="preference-info">
        <h3>Weekly Summary</h3>
        <p>Your weekly stats and achievements</p>
      </div>
      <div class="toggle-switch">
        <input type="checkbox" name="notif_weekly" checked>
        <span class="toggle-slider"></span>
      </div>
    </label>
    
    <label class="preference-item">
      <div class="preference-info">
        <h3>Community Updates</h3>
        <p>News and events from your communities</p>
      </div>
      <div class="toggle-switch">
        <input type="checkbox" name="notif_community">
        <span class="toggle-slider"></span>
      </div>
    </label>
  </div>
</section>