<div class="privacy-item">
  <div class="privacy-info">
    <h3>{{ title }}</h3>
    <p>{{ description }}</p>
  </div>
  <select name="{{ name }}" class="privacy-select">
    <option value="public"{% if selectedValue == "public" %} selected{% endif %}>Public</option>
    <option value="followers"{% if selectedValue == "followers" %} selected{% endif %}>Followers Only</option>
    <option value="private"{% if selectedValue == "private" %} selected{% endif %}>Private</option>
  </select>
</div>