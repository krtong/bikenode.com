<!-- Filter Tabs -->
<div class="BN-Global-mb-4">
    <div class="BN-Global-tabs">
        <button class="BN-Global-tab active" data-tab="followers">
            <span class="BN-Global-tab-label">Followers</span>
            <span class="BN-Global-badge BN-Global-badge-primary BN-Global-ml-2">1,234</span>
        </button>
        
        <button class="BN-Global-tab" data-tab="following">
            <span class="BN-Global-tab-label">Following</span>
            <span class="BN-Global-badge BN-Global-badge-primary BN-Global-ml-2">248</span>
        </button>
        
        <button class="BN-Global-tab" data-tab="suggested">
            <span class="BN-Global-tab-label">Suggested</span>
            <span class="BN-Global-badge BN-Global-badge-success BN-Global-ml-2">New</span>
        </button>
        
        <button class="BN-Global-tab" data-tab="requests">
            <span class="BN-Global-tab-label">Requests</span>
            <span class="BN-Global-badge BN-Global-badge-danger BN-Global-ml-2">3</span>
        </button>
    </div>
    
    <div class="BN-Global-flex-between BN-Global-mt-3">
        <div class="BN-Global-btn-group">
            <button class="BN-Global-btn BN-Global-btn-sm BN-Global-btn-secondary active" data-view="grid" title="Grid view">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                </svg>
            </button>
            <button class="BN-Global-btn BN-Global-btn-sm BN-Global-btn-secondary" data-view="list" title="List view">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
            </button>
        </div>
        
        <select class="BN-Global-form-select" id="sortUsers">
            <option value="recent">Recently Active</option>
            <option value="name">Name A-Z</option>
            <option value="mutual">Mutual Friends</option>
            <option value="miles">Miles Ridden</option>
            <option value="joined">Recently Joined</option>
        </select>
    </div>
</div>

<!-- Advanced Filters (Hidden by default) -->
<div class="BN-Global-card BN-Global-p-3 BN-Global-d-none" id="advancedFilters">
    <div class="BN-Global-d-grid BN-Global-gap-3" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
        <div class="BN-Global-form-group">
            <label class="BN-Global-form-label">Location</label>
            <select class="BN-Global-form-select">
                <option value="">Any Location</option>
                <option value="nearby">Within 25 miles</option>
                <option value="city">Same City</option>
                <option value="state">Same State</option>
                <option value="country">Same Country</option>
            </select>
        </div>
        
        <div class="BN-Global-form-group">
            <label class="BN-Global-form-label">Riding Style</label>
            <select class="BN-Global-form-select">
                <option value="">Any Style</option>
                <option value="road">Road Cycling</option>
                <option value="mountain">Mountain Biking</option>
                <option value="gravel">Gravel/Adventure</option>
                <option value="commute">Commuting</option>
            </select>
        </div>
        
        <div class="BN-Global-form-group">
            <label class="BN-Global-form-label">Activity Level</label>
            <select class="BN-Global-form-select">
                <option value="">Any Level</option>
                <option value="daily">Daily Rider</option>
                <option value="weekly">Weekly Rider</option>
                <option value="weekend">Weekend Warrior</option>
                <option value="occasional">Occasional</option>
            </select>
        </div>
    </div>
    
    <button class="BN-Global-btn BN-Global-btn-sm BN-Global-btn-secondary BN-Global-mt-3" id="clearFilters">Clear Filters</button>
</div>