<!-- MTB Preferences Component -->
<div class="mtb-preferences" id="mtbPreferences" style="display: none;">
    <h4>MTB Trail Preferences</h4>
    
    <div class="trail-difficulty-section">
        <label>Trail Difficulty</label>
        <div class="difficulty-selector">
            <label class="difficulty-option">
                <input type="checkbox" name="difficulty" value="0" checked>
                <span class="difficulty-badge green">● Green</span>
            </label>
            <label class="difficulty-option">
                <input type="checkbox" name="difficulty" value="1" checked>
                <span class="difficulty-badge blue">● Blue</span>
            </label>
            <label class="difficulty-option">
                <input type="checkbox" name="difficulty" value="2">
                <span class="difficulty-badge black">◆ Black</span>
            </label>
            <label class="difficulty-option">
                <input type="checkbox" name="difficulty" value="3">
                <span class="difficulty-badge double-black">◆◆ Double Black</span>
            </label>
        </div>
    </div>

    <div class="trail-type-section">
        <label>Trail Types</label>
        <div class="trail-type-options">
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="singletrack" checked>
                <span class="toggle-slider"></span>
                Singletrack
            </label>
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="doubletrack" checked>
                <span class="toggle-slider"></span>
                Doubletrack
            </label>
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="fireRoad" checked>
                <span class="toggle-slider"></span>
                Fire Roads
            </label>
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="bikeParks">
                <span class="toggle-slider"></span>
                Bike Parks
            </label>
        </div>
    </div>

    <div class="technical-features">
        <label>Technical Features</label>
        <div class="feature-toggles">
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="jumps">
                <span class="toggle-slider"></span>
                Jumps/Drops
            </label>
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="berms">
                <span class="toggle-slider"></span>
                Berms
            </label>
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="rockGardens">
                <span class="toggle-slider"></span>
                Rock Gardens
            </label>
            <label class="BN-Global-toggle-item">
                <input type="checkbox" id="roots">
                <span class="toggle-slider"></span>
                Roots
            </label>
        </div>
    </div>

    <div class="mtb-style-section">
        <label>Riding Style</label>
        <select id="mtbStyle" class="BN-Global-form-control">
            <option value="xc">Cross Country (XC)</option>
            <option value="trail">Trail</option>
            <option value="enduro">Enduro</option>
            <option value="downhill">Downhill</option>
            <option value="allmountain">All Mountain</option>
        </select>
    </div>

    <div class="surface-preference">
        <label>Surface Preference</label>
        <div class="surface-slider">
            <span class="slider-label">Natural</span>
            <input type="range" id="surfaceNatural" min="0" max="100" value="70">
            <span class="slider-label">Built</span>
        </div>
    </div>

    <div class="flow-preference">
        <label>Flow vs Technical</label>
        <div class="flow-slider">
            <span class="slider-label">Flow</span>
            <input type="range" id="flowTechnical" min="0" max="100" value="50">
            <span class="slider-label">Technical</span>
        </div>
    </div>
</div>

