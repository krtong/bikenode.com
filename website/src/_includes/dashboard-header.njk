<link rel="stylesheet" href="/dashboard/dashboard-header/dashboard-header.css">
<header class="dashboard-header">
    <div class="dashboard-header-content">
        <div class="dashboard-header-nav-brand">
            <a href="/">
                <img src="/assets/images/bikenode_logo.png" alt="BikeNode" class="dashboard-header-logo">
            </a>
        </div>
        <div class="dashboard-header-nav">
            <a href="/dashboard/" class="dashboard-header-nav-link{% if '/dashboard/' in page.url %} dashboard-header-active{% endif %}">Dashboard</a>
            <a href="/virtual-garage-dashboard/" class="dashboard-header-nav-link{% if '/virtual-garage' in page.url %} dashboard-header-active{% endif %}">Virtual Garage</a>
            <a href="/discord-dashboard/" class="dashboard-header-nav-link{% if '/discord-dashboard' in page.url %} dashboard-header-active{% endif %}">Discord</a>
            <a href="/communities-dashboard/" class="dashboard-header-nav-link{% if '/communities-dashboard' in page.url %} dashboard-header-active{% endif %}">Communities</a>
        </div>
        <div class="dashboard-header-user">
            <div class="dashboard-header-user-avatar">
                <img src="/assets/images/bikenode_logo.png" alt="User Avatar">
            </div>
            <div class="dashboard-header-user-menu">
                <span class="dashboard-header-username">RiderName</span>
                <div class="dashboard-header-dropdown">
                    <a href="/account-settings/">Account Settings</a>
                    <a href="/">Log Out</a>
                </div>
            </div>
        </div>
    </div>
</header>