<header class="dashboard-header">
    <div class="header-content">
        <div class="nav-brand">
            <a href="/">
                <img src="/assets/images/bikenode_logo.png" alt="BikeNode" class="logo">
            </a>
        </div>
        <div class="header-nav">
            <a href="/dashboard/" class="nav-link{% if page.url.includes('/dashboard/') %} active{% endif %}">Dashboard</a>
            <a href="/virtual-garage-dashboard/" class="nav-link{% if page.url.includes('/virtual-garage') %} active{% endif %}">Virtual Garage</a>
