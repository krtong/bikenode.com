/* Sidebar toggle */
.sidebar-toggle {
    position: absolute;
    top: 1rem;
    right: -1rem;
    width: 2rem;
    height: 2rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
}

.sidebar-toggle:hover {
    background-color: #f3f4f6;
}

.collapsed .sidebar-toggle svg {
    transform: rotate(180deg);
}

/* Collapsed state */
.collapsed .nav-label,
.collapsed .nav-group-header span,
.collapsed .nav-subitem,
.collapsed .user-details,
.collapsed .nav-group-header::before {
    display: none;
}

.collapsed .nav-item,
.collapsed .nav-group-header {
    justify-content: center;
}

.collapsed .nav-group-items {
    padding-left: 0;
}

.collapsed .nav-subitem {
    justify-content: center;
    padding: 0.75rem;
}

.collapsed .user-info {
    justify-content: center;
}

.collapsed .notification-badge {
    right: 0.25rem;
}

/* Tooltips for collapsed state */
.collapsed .nav-item[data-tooltip]:hover::after,
.collapsed .action-item[data-tooltip]:hover::after {
    content: attr(data-tooltip);
    position: absolute;
    left: 100%;
    margin-left: 0.5rem;
    background: #111827;
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    white-space: nowrap;
    z-index: 10;
}

/* Mobile responsive */
@media (max-width: 768px) {
    .dashboard-sidebar-v2 {
        position: fixed;
        left: -280px;
        z-index: 1000;
        transition: left 0.3s ease;
    }
    
    .dashboard-sidebar-v2.mobile-open {
        left: 0;
    }
    
    .sidebar-toggle {
        display: none;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.querySelector('.dashboard-sidebar-v2');
    const toggle = document.querySelector('.sidebar-toggle');
    
    if (toggle && sidebar) {
        toggle.addEventListener('click', function() {
            sidebar.classList.toggle('collapsed');
            localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
        });
        
        // Restore collapsed state
        if (localStorage.getItem('sidebarCollapsed') === 'true') {
            sidebar.classList.add('collapsed');
        }
    }
    
    // Handle details elements to only allow one open at a time
    const detailsElements = document.querySelectorAll('.nav-group');
    detailsElements.forEach(details => {
        details.addEventListener('toggle', function() {
            if (this.open) {
                detailsElements.forEach(otherDetails => {
                    if (otherDetails !== this && otherDetails.open) {
                        otherDetails.open = false;
                    }
                });
            }
        });
    });
});
</script>