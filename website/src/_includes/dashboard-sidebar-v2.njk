    color: #111827;
}

.nav-item.active {
    background-color: #3b82f6;
    color: white;
}

.nav-item .icon {
    flex-shrink: 0;
}

.nav-label {
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.notification-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: #ef4444;
    color: white;
    font-size: 0.75rem;
    padding: 0.125rem 0.375rem;
    border-radius: 9999px;
    font-weight: 600;
}

/* Secondary navigation groups */
.nav-secondary {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.nav-group {
    border: none;
    background: none;
}

.nav-group-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    cursor: pointer;
    list-style: none;
    color: #6b7280;
    font-weight: 500;
