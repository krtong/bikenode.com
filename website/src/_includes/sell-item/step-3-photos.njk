<!-- Step 3: Photos -->
<div class="form-step" data-step="3">
    <div class="step-header">
        <h2>Add photos of your item</h2>
        <p>Good photos sell items faster. Add up to 12 photos.</p>
    </div>
    
    <div class="photo-upload-section">
        <div class="upload-area" id="uploadArea">
            <input type="file" id="photoInput" name="photos" multiple accept="image/*" style="display: none;">
            <div class="upload-prompt" id="uploadPrompt">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
                <h3>Click to upload or drag photos here</h3>
                <p>JPG, PNG up to 10MB each</p>
            </div>
        </div>
        
        <div class="photo-grid" id="photoGrid">
            <!-- Photo previews will be inserted here -->
        </div>
        
        <div class="photo-requirements">
            <h4>Photo Guidelines:</h4>
            <ul>
                <li>Include a main photo showing the full item</li>
                <li>Add close-ups of important features or any defects</li>
                <li>Use good lighting - natural light works best</li>
                <li>Keep backgrounds clean and uncluttered</li>
                <li>Show multiple angles (front, back, sides)</li>
            </ul>
        </div>
    </div>
</div>