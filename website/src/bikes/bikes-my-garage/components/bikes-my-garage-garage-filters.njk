<div class="bikes-my-garage-filters">
    <div class="bikes-my-garage-filter-left">
        <select class="bikes-my-garage-filter-select" id="bikes-my-garage-type-filter">
            <option value="">All Types</option>
            <option value="road">Road</option>
            <option value="mountain">Mountain</option>
            <option value="gravel">Gravel</option>
            <option value="ebike">E-Bike</option>
            <option value="commuter">Commuter</option>
        </select>
        
        <select class="bikes-my-garage-filter-select" id="bikes-my-garage-status-filter">
            <option value="">All Status</option>
            <option value="active">Active</option>
            <option value="retired">Retired</option>
            <option value="forsale">For Sale</option>
            <option value="stolen">Stolen</option>
        </select>
        
        <div class="bikes-my-garage-search">
            <input type="text" 
                   class="bikes-my-garage-search-input" 
                   id="bikes-my-garage-search"
                   placeholder="Search bikes...">
            <svg class="bikes-my-garage-search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <circle cx="11" cy="11" r="8"/>
                <path d="m21 21-4.35-4.35"/>
            </svg>
        </div>
    </div>
    
    <div class="bikes-my-garage-filter-right">
        <div class="bikes-my-garage-view-toggle">
            <button class="bikes-my-garage-view-btn bikes-my-garage-view-active" data-view="grid" aria-label="Grid view">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <rect x="3" y="3" width="7" height="7"/>
                    <rect x="14" y="3" width="7" height="7"/>
                    <rect x="14" y="14" width="7" height="7"/>
                    <rect x="3" y="14" width="7" height="7"/>
                </svg>
            </button>
            <button class="bikes-my-garage-view-btn" data-view="list" aria-label="List view">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <line x1="8" y1="6" x2="21" y2="6"/>
                    <line x1="8" y1="12" x2="21" y2="12"/>
                    <line x1="8" y1="18" x2="21" y2="18"/>
                    <line x1="3" y1="6" x2="3.01" y2="6"/>
                    <line x1="3" y1="12" x2="3.01" y2="12"/>
                    <line x1="3" y1="18" x2="3.01" y2="18"/>
                </svg>
            </button>
        </div>
        
        <select class="bikes-my-garage-filter-select" id="bikes-my-garage-sort">
            <option value="name">Sort by Name</option>
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="miles">Most Miles</option>
            <option value="value">Highest Value</option>
        </select>
    </div>
</div>