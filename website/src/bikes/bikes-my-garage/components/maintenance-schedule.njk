<!-- Maintenance Schedule Section -->
<div class="bikes-my-garage-maintenance-schedule">
    <div class="bikes-my-garage-maintenance-header">
        <div>
            <h2 class="bikes-my-garage-maintenance-title">Maintenance Schedule</h2>
            <p class="bikes-my-garage-maintenance-subtitle">Keep your bikes in top condition</p>
        </div>
        <button class="bikes-my-garage-maintenance-add-button" id="bikesMyGarageMaintenanceAddBtn">
            <span class="bikes-my-garage-maintenance-add-icon">âž•</span>
            <span class="bikes-my-garage-maintenance-add-text">Schedule Maintenance</span>
        </button>
    </div>
    
    <!-- Maintenance Filters -->
    <div class="bikes-my-garage-maintenance-filters-card">
        <div class="bikes-my-garage-maintenance-filter-buttons">
            <button class="bikes-my-garage-maintenance-filter-btn bikes-my-garage-maintenance-filter-btn--active" data-maintenance-filter="all">All Tasks</button>
            <button class="bikes-my-garage-maintenance-filter-btn" data-maintenance-filter="overdue">
                <span class="bikes-my-garage-maintenance-badge bikes-my-garage-maintenance-badge--danger">Overdue</span>
            </button>
            <button class="bikes-my-garage-maintenance-filter-btn" data-maintenance-filter="due-soon">
                <span class="bikes-my-garage-maintenance-badge bikes-my-garage-maintenance-badge--warning">Due Soon</span>
            </button>
            <button class="bikes-my-garage-maintenance-filter-btn" data-maintenance-filter="upcoming">
                <span class="bikes-my-garage-maintenance-badge bikes-my-garage-maintenance-badge--success">Upcoming</span>
            </button>
            <button class="bikes-my-garage-maintenance-filter-btn" data-maintenance-filter="completed">Completed</button>
        </div>
    </div>
    
    <!-- Maintenance List -->
    <div class="bikes-my-garage-maintenance-list" id="maintenanceList">
        <!-- Maintenance items will be dynamically loaded here -->
    </div>
    
    <!-- Empty State -->
    <div class="bikes-my-garage-maintenance-empty bikes-my-garage-maintenance-empty--hidden" id="maintenanceEmpty">
        <div class="bikes-my-garage-maintenance-empty-icon">ðŸ”§</div>
        <h3 class="bikes-my-garage-maintenance-empty-title">No maintenance scheduled</h3>
        <p class="bikes-my-garage-maintenance-empty-text">Keep your bikes running smoothly by scheduling regular maintenance</p>
        <button class="bikes-my-garage-maintenance-empty-button" id="bikesMyGarageMaintenanceEmptyBtn">
            <span class="bikes-my-garage-maintenance-empty-button-icon">âž•</span>
            <span class="bikes-my-garage-maintenance-empty-button-text">Schedule Your First Task</span>
        </button>
    </div>
</div>