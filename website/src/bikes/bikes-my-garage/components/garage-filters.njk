<!-- Search and Filters -->
<div class="bikes-my-garage-filters-card">
    <div class="bikes-my-garage-search-bar">
        <input type="text" 
               class="bikes-my-garage-search-input" 
               id="bikeSearch" 
               placeholder="Search by name, brand, model...">
        <button class="bikes-my-garage-search-button" id="searchBtn">
            <span class="bikes-my-garage-search-button-icon">🔍</span>
            <span class="bikes-my-garage-search-button-text">Search</span>
        </button>
    </div>
    
    <div class="bikes-my-garage-filter-buttons">
        <button class="bikes-my-garage-filter-btn bikes-my-garage-filter-btn--active" data-filter="all">All Bikes</button>
        <span class="bikes-my-garage-filter-divider">|</span>
        <button class="bikes-my-garage-filter-btn" data-filter="motorcycle">🏍️ Motorcycles</button>
        <button class="bikes-my-garage-filter-btn" data-filter="bicycle">🚴 Bicycles</button>
        <button class="bikes-my-garage-filter-btn" data-filter="ebike">⚡ E-Bikes</button>
        <span class="bikes-my-garage-filter-divider">|</span>
        <button class="bikes-my-garage-filter-btn" data-filter="sport">Sport</button>
        <button class="bikes-my-garage-filter-btn" data-filter="cruiser">Cruiser</button>
        <button class="bikes-my-garage-filter-btn" data-filter="touring">Touring</button>
        <button class="bikes-my-garage-filter-btn" data-filter="offroad">Off-Road</button>
    </div>
</div>