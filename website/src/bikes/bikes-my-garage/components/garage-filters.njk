<!-- Search and Filters using global CSS components -->
<div class="card mb-4">
    <div class="search-bar">
        <input type="text" 
               class="form-control" 
               id="bikeSearch" 
               placeholder="Search by name, brand, model...">
        <button class="btn btn-primary" id="searchBtn">
            <span>🔍</span>
            Search
        </button>
    </div>
    
    <div class="filter-buttons">
        <button class="filter-btn active" data-filter="all">All Bikes</button>
        <span class="filter-divider">|</span>
        <button class="filter-btn" data-filter="motorcycle">🏍️ Motorcycles</button>
        <button class="filter-btn" data-filter="bicycle">🚴 Bicycles</button>
        <button class="filter-btn" data-filter="ebike">⚡ E-Bikes</button>
        <span class="filter-divider">|</span>
        <button class="filter-btn" data-filter="sport">Sport</button>
        <button class="filter-btn" data-filter="cruiser">Cruiser</button>
        <button class="filter-btn" data-filter="touring">Touring</button>
        <button class="filter-btn" data-filter="offroad">Off-Road</button>
    </div>
</div>