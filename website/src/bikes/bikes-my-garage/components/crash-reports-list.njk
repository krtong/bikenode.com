<!-- Crash Reports Section -->
<div class="bikes-my-garage-crash-reports-section">
    <div class="bikes-my-garage-crash-reports-header">
        <div>
            <h2 class="bikes-my-garage-crash-reports-title">Crash Reports</h2>
            <p class="bikes-my-garage-crash-reports-subtitle">Track your gear performance in real-world scenarios</p>
        </div>
        <button class="bikes-my-garage-crash-reports-add-button" id="bikesMyGarageCrashReportsAddBtn">
            <span>➕</span>
            Add Report
        </button>
    </div>
    
    <!-- Info Card -->
    <div class="bikes-my-garage-crash-reports-info-card">
        <span class="bikes-my-garage-crash-reports-info-icon">ℹ️</span>
        <p class="bikes-my-garage-crash-reports-info-text">Your crash reports help other riders make informed gear decisions. All reports are anonymous.</p>
    </div>
    
    <!-- Crash Reports List -->
    <div id="crashReportsList">
        <!-- Reports will be dynamically loaded here -->
    </div>
    
    <!-- Empty State -->
    <div class="bikes-my-garage-crash-reports-empty bikes-my-garage-crash-reports-empty--hidden" id="crashReportsEmpty">
        <div class="bikes-my-garage-crash-reports-empty-icon">📋</div>
        <h3 class="bikes-my-garage-crash-reports-empty-title">No crash reports yet</h3>
        <p class="bikes-my-garage-crash-reports-empty-text">We hope you never need to add one, but if you do, your experience can help others</p>
        <button class="bikes-my-garage-crash-reports-empty-button" id="bikesMyGarageCrashReportsEmptyBtn">
            <span class="bikes-my-garage-crash-reports-empty-button-icon">➕</span>
            <span class="bikes-my-garage-crash-reports-empty-button-text">Add Your First Report</span>
        </button>
    </div>
</div>