// Photo action buttons
document.querySelectorAll('.photo-action').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        const action = this.title;
        console.log('Photo action:', action);
        
        if (action === 'Delete photo') {
            if (confirm('Are you sure you want to delete this photo?')) {
                this.closest('.photo-item').remove();
            }
        } else if (action === 'Set as primary') {
            // Mark as primary photo
            alert('Photo set as primary!');
        }
    });
});

// Form actions
function saveBike() {
    // Collect all form data
    const bikeData = {
        name: document.getElementById('bike-name').value,
        year: document.getElementById('bike-year').value,
        make: document.getElementById('bike-make').value,
        model: document.getElementById('bike-model').value,
        type: document.getElementById('bike-type').value,
        category: document.getElementById('bike-category').value,
        notes: document.getElementById('bike-notes').value,
        privacy: document.querySelector('input[name="privacy"]:checked').value
        // ... collect all other fields
    };
    
    console.log('Saving bike data:', bikeData);
    alert('Bike updated successfully!');
    window.location.href = '/virtual-garage-dashboard/';
}

function cancelEdit() {
    if (confirm('Are you sure you want to cancel? Any unsaved changes will be lost.')) {
        window.location.href = '/virtual-garage-dashboard/';
    }
}

