---
layout: bikenode-main-layout-01
title: Maintenance Records
subtitle: Track service history and schedule future maintenance
showContentHeader: false
breadcrumb:
  - title: Virtual Garage
    url: /virtual-garage-dashboard/
  - title: Maintenance Records
customCSS:
  - ./styles/bikes-maintenance-log.css
customJS:
  - ./js/bikes-maintenance-log.js
---

<div class="bikes-maintenance-log-container">
    <!-- Header -->
    <div class="bikes-maintenance-log-header">
        <div class="bikes-maintenance-log-header-left">
            <h1>Maintenance Records</h1>
            <p class="bikes-maintenance-log-subtitle">Track service history and plan upcoming maintenance</p>
        </div>
        <div class="bikes-maintenance-log-header-actions">
            <button class="bikes-maintenance-log-btn-secondary" onclick="scheduleReminder()">
                <span class="bikes-maintenance-log-icon">🔔</span>
                Set Reminder
            </button>
            <button class="bikes-maintenance-log-btn-primary" onclick="addMaintenanceRecord()">
                <span class="bikes-maintenance-log-icon">➕</span>
                Add Record
            </button>
        </div>
    </div>

    <!-- Maintenance Overview -->
    <div class="bikes-maintenance-log-overview">
        <div class="bikes-maintenance-log-overview-stats">
            <div class="bikes-maintenance-log-stat-card">
                <div class="bikes-maintenance-log-stat-icon">🔧</div>
                <div class="bikes-maintenance-log-stat-content">
                    <h3>12</h3>
                    <p>Total Records</p>
                </div>
            </div>
            
            <div class="bikes-maintenance-log-stat-card">
                <div class="bikes-maintenance-log-stat-icon">💰</div>
                <div class="bikes-maintenance-log-stat-content">
                    <h3>$2,450</h3>
                    <p>Total Spent</p>
                </div>
            </div>
            
            <div class="bikes-maintenance-log-stat-card">
                <div class="bikes-maintenance-log-stat-icon">📅</div>
                <div class="bikes-maintenance-log-stat-content">
                    <h3>850</h3>
                    <p>Miles Since Last</p>
                </div>
            </div>
            
            <div class="bikes-maintenance-log-stat-card bikes-maintenance-log-upcoming">
                <div class="bikes-maintenance-log-stat-icon">⏰</div>
                <div class="bikes-maintenance-log-stat-content">
                    <h3>2</h3>
                    <p>Upcoming Services</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Maintenance -->
    <section class="bikes-maintenance-log-upcoming-section">
        <h2>Upcoming Maintenance</h2>
        <div class="bikes-maintenance-log-upcoming-list">
            <div class="bikes-maintenance-log-upcoming-item bikes-maintenance-log-priority-high">
                <div class="bikes-maintenance-log-upcoming-icon">🛢️</div>
                <div class="bikes-maintenance-log-upcoming-content">
                    <h3>Oil Change</h3>
                    <p>Due at 19,000 miles or in 2 weeks</p>
                    <div class="bikes-maintenance-log-upcoming-progress">
                        <div class="bikes-maintenance-log-progress-bar">
                            <div class="bikes-maintenance-log-progress-fill" style="width: 85%"></div>
                        </div>
                        <span class="bikes-maintenance-log-progress-text">850 miles to go</span>
                    </div>
                </div>
                <div class="bikes-maintenance-log-upcoming-actions">
                    <button class="bikes-maintenance-log-btn-small bikes-maintenance-log-btn-primary" onclick="completeService('oil-change')">Mark Complete</button>
                    <button class="bikes-maintenance-log-btn-small bikes-maintenance-log-btn-secondary" onclick="snoozeReminder('oil-change')">Snooze</button>
                </div>
            </div>
            
            <div class="bikes-maintenance-log-upcoming-item bikes-maintenance-log-priority-medium">
                <div class="bikes-maintenance-log-upcoming-icon">🔩</div>
                <div class="bikes-maintenance-log-upcoming-content">
                    <h3>Chain Adjustment</h3>
                    <p>Due in 1 month</p>
                    <div class="bikes-maintenance-log-upcoming-progress">
                        <div class="bikes-maintenance-log-progress-bar">
                            <div class="bikes-maintenance-log-progress-fill" style="width: 60%"></div>
                        </div>
                        <span class="bikes-maintenance-log-progress-text">3 weeks remaining</span>
                    </div>
                </div>
                <div class="bikes-maintenance-log-upcoming-actions">
                    <button class="bikes-maintenance-log-btn-small bikes-maintenance-log-btn-primary" onclick="completeService('chain')">Mark Complete</button>
                    <button class="bikes-maintenance-log-btn-small bikes-maintenance-log-btn-secondary" onclick="snoozeReminder('chain')">Snooze</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Filter and Search -->
    <section class="bikes-maintenance-log-filter-section">
        <div class="bikes-maintenance-log-filter-controls">
            <div class="bikes-maintenance-log-search-group">
                <input type="text" placeholder="Search maintenance records..." class="bikes-maintenance-log-search-input" id="maintenance-search">
                <button class="bikes-maintenance-log-search-btn">🔍</button>
            </div>
            
            <div class="bikes-maintenance-log-filter-group">
                <select class="bikes-maintenance-log-filter-select" id="type-filter">
                    <option value="">All Types</option>
                    <option value="oil">Oil Changes</option>
                    <option value="tire">Tire Service</option>
                    <option value="brake">Brake Work</option>
                    <option value="suspension">Suspension</option>
                    <option value="other">Other</option>
                </select>
                
                <select class="bikes-maintenance-log-filter-select" id="year-filter">
                    <option value="">All Years</option>
                    <option value="2024">2024</option>
                    <option value="2023">2023</option>
                    <option value="2022">2022</option>
                </select>
                
                <button class="bikes-maintenance-log-btn-secondary" onclick="exportRecords()">
                    <span class="bikes-maintenance-log-icon">📊</span>
                    Export
                </button>
            </div>
        </div>
    </section>

    <!-- Maintenance Records -->
    <section class="bikes-maintenance-log-records-section">
        <h2>Maintenance History</h2>
        <div class="bikes-maintenance-log-records-list">
            <div class="bikes-maintenance-log-record-item">
                <div class="bikes-maintenance-log-record-date">
                    <div class="bikes-maintenance-log-date-month">Nov</div>
                    <div class="bikes-maintenance-log-date-day">15</div>
                    <div class="bikes-maintenance-log-date-year">2024</div>
                </div>
                
                <div class="bikes-maintenance-log-record-content">
                    <div class="bikes-maintenance-log-record-header">
                        <h3>Öhlins Suspension Setup</h3>
                        <div class="bikes-maintenance-log-record-type bikes-maintenance-log-suspension">Suspension</div>
                    </div>
                    <p class="bikes-maintenance-log-record-description">
                        Dialed in compression and rebound settings for track days. Perfect setup achieved 
                        after testing at Thunderhill Raceway.
                    </p>
                    <div class="bikes-maintenance-log-record-details">
                        <span class="bikes-maintenance-log-detail-item">
                            <span class="bikes-maintenance-log-detail-icon">📍</span>
                            <span>Bay Area Suspension</span>
                        </span>
                        <span class="bikes-maintenance-log-detail-item">
                            <span class="bikes-maintenance-log-detail-icon">🔢</span>
                            <span>18,200 miles</span>
                        </span>
                        <span class="bikes-maintenance-log-detail-item">
                            <span class="bikes-maintenance-log-detail-icon">💰</span>
                            <span>$150.00</span>
                        </span>
                    </div>
                </div>
                
                <div class="bikes-maintenance-log-record-actions">
                    <button class="bikes-maintenance-log-record-action" onclick="editRecord(1)">Edit</button>
                    <button class="bikes-maintenance-log-record-action" onclick="duplicateRecord(1)">Duplicate</button>
                    <button class="bikes-maintenance-log-record-action bikes-maintenance-log-delete" onclick="deleteRecord(1)">Delete</button>
                </div>
            </div>
            
            <div class="bikes-maintenance-log-record-item">
                <div class="bikes-maintenance-log-record-date">
                    <div class="bikes-maintenance-log-date-month">Oct</div>
                    <div class="bikes-maintenance-log-date-day">28</div>
                    <div class="bikes-maintenance-log-date-year">2024</div>
                </div>
                
                <div class="bikes-maintenance-log-record-content">
                    <div class="bikes-maintenance-log-record-header">
                        <h3>Oil Change & Filter</h3>
                        <div class="bikes-maintenance-log-record-type bikes-maintenance-log-oil">Oil Change</div>
                    </div>
                    <p class="bikes-maintenance-log-record-description">
                        Regular oil change with Motul 5100 15W-50. New oil filter and drain plug washer installed.
                    </p>
                    <div class="bikes-maintenance-log-record-details">
                        <span class="detail-item">
                            <span class="detail-icon">📍</span>
                            <span>Local Garage</span>
                        </span>
                        <span class="detail-item">
                            <span class="detail-icon">🔢</span>
                            <span>18,100 miles</span>
                        </span>
                        <span class="detail-item">
                            <span class="detail-icon">💰</span>
                            <span>$85.00</span>
                        </span>
                    </div>
                </div>
                
                <div class="bikes-maintenance-log-record-actions">
                    <button class="bikes-maintenance-log-record-action" onclick="editRecord(2)">Edit</button>
                    <button class="bikes-maintenance-log-record-action" onclick="duplicateRecord(2)">Duplicate</button>
                    <button class="bikes-maintenance-log-record-action bikes-maintenance-log-delete" onclick="deleteRecord(2)">Delete</button>
                </div>
            </div>
            
            <div class="bikes-maintenance-log-record-item">
                <div class="bikes-maintenance-log-record-date">
                    <div class="bikes-maintenance-log-date-month">Sep</div>
                    <div class="bikes-maintenance-log-date-day">12</div>
                    <div class="bikes-maintenance-log-date-year">2024</div>
                </div>
                
                <div class="bikes-maintenance-log-record-content">
                    <div class="bikes-maintenance-log-record-header">
                        <h3>Rear Tire Replacement</h3>
                        <div class="bikes-maintenance-log-record-type bikes-maintenance-log-tire">Tire Service</div>
                    </div>
                    <p class="bikes-maintenance-log-record-description">
                        Replaced worn rear tire with Pirelli Diablo Rosso IV. Great grip for track days.
                    </p>
                    <div class="bikes-maintenance-log-record-details">
                        <span class="bikes-maintenance-log-detail-item">
                            <span class="bikes-maintenance-log-detail-icon">📍</span>
                            <span>Cycle Gear</span>
                        </span>
                        <span class="bikes-maintenance-log-detail-item">
                            <span class="bikes-maintenance-log-detail-icon">🔢</span>
                            <span>17,800 miles</span>
                        </span>
                        <span class="bikes-maintenance-log-detail-item">
                            <span class="bikes-maintenance-log-detail-icon">💰</span>
                            <span>$220.00</span>
                        </span>
                    </div>
                </div>
                
                <div class="bikes-maintenance-log-record-actions">
                    <button class="bikes-maintenance-log-record-action" onclick="editRecord(3)">Edit</button>
                    <button class="bikes-maintenance-log-record-action" onclick="duplicateRecord(3)">Duplicate</button>
                    <button class="bikes-maintenance-log-record-action bikes-maintenance-log-delete" onclick="deleteRecord(3)">Delete</button>
                </div>
            </div>
        </div>
        
        <div class="bikes-maintenance-log-load-more">
            <button class="bikes-maintenance-log-btn-secondary">Load More Records</button>
        </div>
    </section>
</div>

<!-- Add Record Modal -->
<div class="bikes-maintenance-log-modal-overlay" id="add-record-modal" style="display: none;">
    <div class="bikes-maintenance-log-modal">
        <div class="bikes-maintenance-log-modal-header">
            <h2>Add Maintenance Record</h2>
            <button class="bikes-maintenance-log-modal-close" onclick="closeModal()">&times;</button>
        </div>
        
        <form class="bikes-maintenance-log-modal-form" id="maintenance-form">
            <div class="bikes-maintenance-log-form-grid">
                <div class="bikes-maintenance-log-form-group">
                    <label for="service-type">Service Type</label>
                    <select id="service-type" required>
                        <option value="">Select type...</option>
                        <option value="oil">Oil Change</option>
                        <option value="tire">Tire Service</option>
                        <option value="brake">Brake Work</option>
                        <option value="suspension">Suspension</option>
                        <option value="chain">Chain Maintenance</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                
                <div class="bikes-maintenance-log-form-group">
                    <label for="service-date">Date</label>
                    <input type="date" id="service-date" required>
                </div>
                
                <div class="bikes-maintenance-log-form-group">
                    <label for="service-mileage">Mileage</label>
                    <input type="number" id="service-mileage" placeholder="Current mileage">
                </div>
                
                <div class="bikes-maintenance-log-form-group">
                    <label for="service-cost">Cost</label>
                    <input type="number" id="service-cost" step="0.01" placeholder="0.00">
                </div>
            </div>
            
            <div class="bikes-maintenance-log-form-group">
                <label for="service-title">Title</label>
                <input type="text" id="service-title" placeholder="Brief description" required>
            </div>
            
            <div class="bikes-maintenance-log-form-group">
                <label for="service-location">Location/Shop</label>
                <input type="text" id="service-location" placeholder="Where was the service performed?">
            </div>
            
            <div class="bikes-maintenance-log-form-group">
                <label for="service-description">Description</label>
                <textarea id="service-description" rows="4" placeholder="Detailed description of the service performed..."></textarea>
            </div>
            
            <div class="bikes-maintenance-log-modal-actions">
                <button type="button" class="bikes-maintenance-log-btn-secondary" onclick="closeModal()">Cancel</button>
                <button type="submit" class="bikes-maintenance-log-btn-primary">Add Record</button>
            </div>
        </form>
    </div>
</div>


