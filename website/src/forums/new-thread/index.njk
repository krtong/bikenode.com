                    <button type="button" class="btn-preview">Preview</button>
                </div>
            </div>

            <div class="form-group attachments">
                <label>Attachments (optional)</label>
                <div class="upload-area">
                    <i class="icon-upload"></i>
                    <p>Drag and drop files here or <button type="button" class="btn-browse">browse</button></p>
                    <span class="upload-hint">Max 10MB per file. Images, PDFs, and GPX files allowed.</span>
                </div>
                <div class="attached-files"></div>
            </div>

            <div class="form-group">
                <label>Post Options</label>
                <div class="post-options">
                    <label class="checkbox-label">
                        <input type="checkbox" checked> Notify me of replies
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox"> Make this a sticky thread (moderators only)
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox"> Create as poll
                    </label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Create Thread</button>
                <button type="button" class="btn btn-secondary">Save Draft</button>
                <button type="button" class="btn btn-text">Cancel</button>
            </div>
        </form>
    </div>

