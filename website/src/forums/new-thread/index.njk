<script>
// Character counter
document.getElementById('thread-title').addEventListener('input', function(e) {
    const count = e.target.value.length;
    const counter = e.target.nextElementSibling;
    counter.textContent = `${count}/120`;
    if (count > 120) {
        counter.style.color = '#dc3545';
    } else {
        counter.style.color = '#666';
    }
});

// Tag suggestions
document.querySelectorAll('.suggested-tag').forEach(tag => {
    tag.addEventListener('click', function() {
        const input = document.getElementById('thread-tags');
        const currentTags = input.value.trim();
        if (currentTags) {
            input.value = currentTags + ', ' + this.textContent;
        } else {
            input.value = this.textContent;
        }
    });
});

// Preview functionality
document.querySelector('.btn-preview').addEventListener('click', function() {
    const content = document.getElementById('thread-content').value;
    const modal = document.querySelector('.preview-modal');
    const previewContent = modal.querySelector('.preview-content');
    
    // Simple markdown to HTML conversion (in real app, use a proper markdown parser)
    let html = content
        .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
        .replace(/\*(.*?)\*/g, '<em>$1</em>')
        .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2">$1</a>')
        .replace(/^> (.*)/gm, '<blockquote>$1</blockquote>')
        .replace(/\n/g, '<br>');
    
    previewContent.innerHTML = html;
    modal.style.display = 'flex';
});

// Close modal
document.querySelector('.close-modal').addEventListener('click', function() {
    document.querySelector('.preview-modal').style.display = 'none';
});
</script>