{
  "name": "bikenode-website",
  "version": "1.0.0",
  "description": "BikeNode website built with Eleventy",
  "scripts": {
    "dev": "./run-dev.sh",
    "dev-frontend": "eleventy --serve --port=8081",
    "dev-api": "cd api-server && go run main.go",
    "build": "eleventy",
    "build-api": "cd api-server && go build -o ../bikenode-api",
    "clean": "rm -rf _site",
    "clean-all": "rm -rf _site bikenode-api"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "glob": "^11.0.2"
  },
  "keywords": [
    "bikenode",
    "eleventy",
    "static-site"
  ],
  "author": "BikeNode",
  "license": "ISC"
}
